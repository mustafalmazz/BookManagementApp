@using BookManagementApp.Areas.Admin.Models
@using BookManagementApp.Models
@model CategoryUserViewModel

<style>
    .book-navbar {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%) !important;
        border: none !important;
        box-shadow: 0 4px 20px rgba(107, 85, 65, 0.3);
        padding: 15px 0;
        /* İsteğe bağlı: Header altı boşluğu sıfırlamak istersen 0px yap */
        margin-bottom: 0px !important;
        position: relative;
    }

        .book-navbar::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, #f5f0e8, transparent);
            opacity: 0.5;
        }

        .book-navbar .navbar-brand {
            color: #f5f0e8 !important;
            font-family: 'Georgia', serif;
            font-size: 1.6rem;
            font-weight: 700;
            letter-spacing: 1px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
        }

    .brand-icon {
        font-size: 1.8rem;
        filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.3));
    }

    .book-navbar .navbar-toggler {
        border: 2px solid #f5f0e8;
        background: rgba(245, 240, 232, 0.1);
        padding: 6px 10px; /* Mobilde biraz küçülttük */
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .book-navbar .navbar-toggler:hover {
            background: rgba(245, 240, 232, 0.2);
            transform: scale(1.05);
        }

    .book-navbar .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23f5f0e8' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        width: 1.2em; /* İkonu biraz kibarlaştırdık */
        height: 1.2em;
    }

    .book-navbar .nav-link {
        color: #f5f0e8 !important;
        font-family: 'Georgia', serif;
        font-size: 1.1rem;
        font-weight: 500;
        padding: 10px 20px !important;
        margin: 0 30px;
        border-radius: 10px;
        transition: all 0.3s ease;
        position: relative;
    }

        .book-navbar .nav-link::before {
            content: '';
            position: absolute;
            bottom: 5px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: #ffd782;
            transition: width 0.3s ease;
        }

        .book-navbar .nav-link:hover {
            background: rgba(245, 240, 232, 0.15);
            color: #ffd782 !important;
            transform: translateY(-2px);
        }

            .book-navbar .nav-link:hover::before {
                width: 70%;
            }

        .book-navbar .nav-link.active {
            background: rgba(245, 240, 232, 0.2);
            color: #ffd782 !important;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    /* --- MASAÜSTÜ ARAMA FORMU (Mevcut) --- */
    .book-search-form {
        margin-left: auto;
        display: flex;
        gap: 10px;
    }

    .book-search-input {
        border: 2px solid rgba(245, 240, 232, 0.3);
        border-radius: 25px;
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.1);
        color: #f5f0e8;
        font-family: 'Georgia', serif;
        min-width: 300px;
        transition: all 0.3s ease;
        backdrop-filter: blur(5px);
    }

        .book-search-input::placeholder {
            color: rgba(245, 240, 232, 0.7);
            font-style: italic;
        }

        .book-search-input:focus {
            background: rgba(255, 255, 255, 0.2);
            border-color: #ffd782;
            color: #f5f0e8;
            box-shadow: 0 0 0 3px rgba(255, 215, 130, 0.2);
            outline: none;
        }

    .book-search-btn {
        background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
        border: 2px solid rgba(245, 240, 232, 0.3);
        color: #f5f0e8;
        padding: 10px 25px;
        border-radius: 25px;
        font-weight: 600;
        font-family: 'Georgia', serif;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .book-search-btn:hover {
            background: linear-gradient(135deg, #c89666 0%, #a0785a 100%);
            color: #f5f0e8;
            transform: scale(1.01);
            border-color: #ffd782;
        }

    .navbar-nav {
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .book-navbar .container-fluid {
        max-width: 1400px;
    }

    @@media (min-width: 992px) {
        .book-navbar .dropdown-menu

    {
        left: 50% !important;
        right: auto !important;
        transform: translateX(-50%) !important;
        margin-top: 15px !important;
        border-radius: 15px !important;
        border: none !important;
        box-shadow: 0 10px 30px rgba(107, 85, 65, 0.2);
        text-align: center;
        min-width: 200px;
        animation: fadeInDropdown 0.3s ease;
    }

    .book-navbar .dropdown-menu::before {
        content: '';
        position: absolute;
        top: -8px;
        left: 50%;
        transform: translateX(-50%);
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;
        border-bottom: 8px solid #fff;
    }

    }

    @@keyframes fadeInDropdown {
        from

    {
        opacity: 0;
        transform: translate(-50%, 10px);
    }

    to {
        opacity: 1;
        transform: translate(-50%, 0);
    }

    }

    .dropdown-item:active, .dropdown-item:hover {
        background-color: rgba(139, 111, 71, 0.1) !important;
        color: #8b6f47 !important;
        border-radius: 10px;
    }

    /* --- YENİ MOBİL ÖZEL CSSLER --- */
    @@media (max-width: 768px) {
        .book-navbar .nav-link

    {
        text-align: center;
        margin: 5px 0;
    }

    /* Mobilde Navbar'ı sıkışık yapmamak için padding ayarı */
    .book-navbar {
        padding: 10px 0;
    }

    /* Mobil Arama Formu Stilleri */
    .mobile-search-form {
        flex-grow: 1; /* Boşluğu doldur */
        margin: 0 10px; /* Logo ve hamburger ile mesafe */
        position: relative;
    }

    .mobile-search-input {
        width: 100%;
        border: 2px solid rgba(245, 240, 232, 0.3);
        border-radius: 20px;
        padding: 8px 35px 8px 15px; /* Sağ tarafta ikon için boşluk */
        background: rgba(255, 255, 255, 0.15);
        color: #f5f0e8;
        font-size: 0.95rem;
        outline: none;
    }

        .mobile-search-input::placeholder {
            color: rgba(245, 240, 232, 0.6);
            font-size: 0.9rem;
        }

        .mobile-search-input:focus {
            background: rgba(255, 255, 255, 0.25);
            border-color: #ffd782;
        }

    /* Mobil Arama İkonu (Input'un içinde) */
    .mobile-search-btn-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #f5f0e8;
        padding: 0;
    }

    }
</style>

<header>
    <nav class="navbar navbar-expand-lg navbar-toggleable-sm book-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/images/library.png" style="width:50px;" />
                <span class="d-none d-md-block">DijitalKütüphanem</span>
            </a>

            <form class="mobile-search-form d-flex d-lg-none" asp-controller="Home" asp-action="Search" method="get">
                <input class="mobile-search-input" type="search" name="q" placeholder="Raflarında Ara..." aria-label="Search">
                <button type="submit" class="mobile-search-btn-icon">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarContent">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-tags"></i> Kategoriler
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                            @if (Model != null && Model.Categories.Any())
                            {
                                foreach (var cat in Model.Categories)
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="BooksByCategory" asp-route-id="@cat.Id">
                                            @cat.CategoryName
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li><span class="dropdown-item text-muted">Kategori bulunamadı</span></li>
                            }
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user"></i>
                            @(Model.User != null ? Model.User.UserName : "Hesabım")
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item logout-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    Kütüphaneyi Yönet
                                </a>
                                @if (Model.User.Role == "SuperAdmin")
                                {
                                    <a class="dropdown-item logout-item" asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Index">
                                        Sistemi Yönet
                                    </a>
                                }
                            </li>
                            <li>
                                <a class="dropdown-item logout-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="fa-solid fa-right-from-bracket text-danger"></i> Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-action="SendMeMessage" asp-controller="Home" role="button">
                            <i class="bi bi-phone"></i> İletişim
                        </a>
                    </li>
                </ul>

                <form class="mobile-search-form d-flex d-lg-none" asp-controller="Home" asp-action="Index" method="get">
                    <input class="mobile-search-input" type="search" name="q" placeholder="Raflarında Ara..." aria-label="Search" value="@ViewData["CurrentSearch"]">
                    <button type="submit" class="mobile-search-btn-icon">
                        <i class="bi bi-search"></i>
                    </button>
                </form>

                <form class="book-search-form d-none d-lg-flex" asp-controller="Home" asp-action="Index" method="get">
                    <input class="form-control book-search-input" type="search" name="q"
                           placeholder="Kitap veya yazar ara..." aria-label="Search" value="@ViewData["CurrentSearch"]">
                    <button class="btn book-search-btn" type="submit">
                        <i class="bi bi-search"></i>
                        Ara
                    </button>
                </form>
            </div>
        </div>
    </nav>
</header>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('.book-navbar .nav-link');

        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    });
</script>