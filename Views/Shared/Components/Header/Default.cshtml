@using BookManagementApp.Areas.Admin.Models
@using BookManagementApp.Models
@model CategoryUserViewModel

@{
    var routeData = ViewContext.RouteData.Values;
    var currentController = routeData["controller"]?.ToString();
    var currentAction = routeData["action"]?.ToString();

    bool isGooglePage = currentController == "Home" && currentAction == "GoogleBooks";
    string targetAction = isGooglePage ? "GoogleBooks" : "Index";
    string placeholderText = isGooglePage ? "Google Kitaplarında Ara..." : "Kütüphanemde Ara...";
}

<style>
    /* --- NAVBAR ANA KAPLAYICI --- */
    .book-navbar {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%) !important;
        border: none !important;
        box-shadow: 0 2px 10px rgba(107, 85, 65, 0.25);
        padding: 8px 0;
        margin-bottom: 0px !important;
        position: relative;
    }

        .book-navbar::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, #f5f0e8, transparent);
            opacity: 0.4;
        }

        /* --- LOGO --- */
        .book-navbar .navbar-brand {
            color: #f5f0e8 !important;
            font-family: 'Georgia', serif;
            font-size: 1.3rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            margin-right: 0; /* Flex dağılımı için sıfırlandı */
        }

    /* --- NAVİGASYON LİNKLERİ (Eşit Dağılım Ayarı) --- */
    .navbar-nav {
        align-items: center;
        /* BURASI DEĞİŞTİ: Linkleri eşit aralıklarla yayar */
        justify-content: space-evenly;
        width: 100%;
    }

    .book-navbar .nav-link {
        color: #f5f0e8 !important;
        font-family: 'Georgia', serif;
        font-size: 0.95rem;
        font-weight: 500;
        padding: 8px 12px !important;
        /* Margin kaldırıldı, flex space-evenly halledecek */
        margin: 0;
        border-radius: 6px;
        transition: all 0.3s ease;
        position: relative;
        white-space: nowrap; /* Linklerin kırılmasını önler */
    }

        .book-navbar .nav-link::before {
            content: '';
            position: absolute;
            bottom: 3px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: #ffd782;
            transition: width 0.3s ease;
        }

        .book-navbar .nav-link:hover {
            background: rgba(245, 240, 232, 0.1);
            color: #ffd782 !important;
            transform: translateY(-1px);
        }

            .book-navbar .nav-link:hover::before {
                width: 60%;
            }

        .book-navbar .nav-link.active {
            background: rgba(245, 240, 232, 0.15);
            color: #ffd782 !important;
        }

    /* --- ARAMA FORMU --- */
    .book-search-form {
        margin-left: auto;
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .book-search-input {
        border: 1px solid rgba(245, 240, 232, 0.4);
        border-radius: 20px;
        padding: 6px 15px;
        background: rgba(255, 255, 255, 0.15);
        color: #f5f0e8;
        font-family: 'Georgia', serif;
        font-size: 0.9rem;
        min-width: 250px;
        transition: all 0.3s ease;
        backdrop-filter: blur(5px);
    }

        .book-search-input::placeholder {
            color: rgba(245, 240, 232, 0.7);
            font-style: italic;
            font-size: 0.85rem;
        }

        .book-search-input:focus {
            background: rgba(255, 255, 255, 0.25);
            border-color: #ffd782;
            color: #f5f0e8;
            box-shadow: 0 0 0 2px rgba(255, 215, 130, 0.2);
            outline: none;
        }

    .book-search-btn {
        background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
        border: 1px solid rgba(245, 240, 232, 0.4);
        color: #f5f0e8;
        padding: 6px 18px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        font-family: 'Georgia', serif;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .book-search-btn:hover {
            background: linear-gradient(135deg, #c89666 0%, #a0785a 100%);
            color: #f5f0e8;
            transform: scale(1.02);
            border-color: #ffd782;
        }

    /* --- DROPDOWN AYARLARI --- */
    @@media (min-width: 992px) {
        .book-navbar .dropdown-menu

    {
        left: 50% !important;
        right: auto !important;
        transform: translateX(-50%) !important;
        margin-top: 10px !important;
        border-radius: 10px !important;
        border: none !important;
        box-shadow: 0 8px 25px rgba(107, 85, 65, 0.15);
        text-align: center;
        min-width: 180px;
        font-size: 0.9rem;
        animation: fadeInDropdown 0.2s ease;
    }

    .book-navbar .dropdown-menu::before {
        content: '';
        position: absolute;
        top: -6px;
        left: 50%;
        transform: translateX(-50%);
        border-left: 6px solid transparent;
        border-right: 6px solid transparent;
        border-bottom: 6px solid #fff;
    }

    }
    @@keyframes fadeInDropdown {
        from

    {
        opacity: 0;
        transform: translate(-50%, 5px);
    }

    to {
        opacity: 1;
        transform: translate(-50%, 0);
    }

    }

    .dropdown-item {
        padding: 6px 15px;
    }

        .dropdown-item:active, .dropdown-item:hover {
            background-color: rgba(139, 111, 71, 0.1) !important;
            color: #8b6f47 !important;
            border-radius: 6px;
        }

    /* --- MOBİL AYARLAR (DOKUNULMADI) --- */
    .book-navbar .navbar-toggler {
        border: 1px solid rgba(245, 240, 232, 0.5) !important;
        padding: 5px 10px;
        outline: none;
        box-shadow: none;
    }

    .book-navbar .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23f5f0e8' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e") !important;
        width: 1em;
        height: 1em;
    }

    @@media (max-width: 768px) {
        .book-navbar .nav-link

    {
        text-align: center;
        margin: 2px 0;
        padding: 10px 0 !important;
    }

    .mobile-search-form {
        flex-grow: 1;
        margin: 0 10px;
        position: relative;
    }

        .mobile-search-input {
            width: 100%;
            border: 2px solid rgba(245, 240, 232, 0.3);
            border-radius: 20px;
            padding: 8px 35px 8px 15px;
            background: rgba(255, 255, 255, 0.15);
            /* Yazı rengini beyaz/krem yapıyoruz */
            color: #f5f0e8 !important;
            font-size: 0.95rem;
            outline: none;
        }
            /* Placeholder (İpucu Yazısı) Rengi - DÜZELTİLDİ */
            .mobile-search-input::placeholder {
                color: #f5f0e8 !important; /* Rengi zorla krem yap */
                opacity: 0.8; /* Hafif saydamlık (Gri görünmemesi için yüksek tutuldu) */
            }
            /* Bazı mobil tarayıcılar (Safari/Chrome) için özel ön ek */
            .mobile-search-input::-webkit-input-placeholder {
                color: #f5f0e8 !important;
                opacity: 0.8;
            }

            .mobile-search-input:focus {
                background: rgba(255, 255, 255, 0.25);
                border-color: #ffd782;
            }

    .mobile-search-btn-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #f5f0e8;
        padding: 0;
    }

    .book-navbar .navbar-brand {
        font-size: 1.1rem;
    }

    }
</style>

<header>
    <nav class="navbar navbar-expand-lg navbar-toggleable-sm book-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/images/library.png" style="width:35px;" />
                <span class="d-none d-md-block">DijitalKütüphanem</span>
            </a>

            <form class="mobile-search-form d-flex d-lg-none" asp-controller="Home" asp-action="@targetAction" method="get">
                <input class="mobile-search-input" type="search" name="q" placeholder="@placeholderText" aria-label="Search" value="@ViewData["CurrentSearch"]">
                <button type="submit" class="mobile-search-btn-icon">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarContent">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-tags"></i> Kategoriler
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                            @if (Model != null && Model.Categories.Any())
                            {
                                foreach (var cat in Model.Categories)
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-categoryId="@cat.Id">
                                            @cat.CategoryName
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li><span class="dropdown-item text-muted">Kategori bulunamadı</span></li>
                            }
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user"></i>
                            @(Model.User != null ? Model.User.UserName : "Hesabım")
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item logout-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    Kütüphaneyi Yönet
                                </a>
                                <a class="dropdown-item logout-item" asp-area="" asp-controller="Profile" asp-action="Index">
                                    Profil Özetim
                                </a>
                                @if (Model.User.Role == "SuperAdmin")
                                {
                                    <a class="dropdown-item logout-item" asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Index">
                                        Sistemi Yönet
                                    </a>
                                }
                            </li>
                            <li>
                                <a class="dropdown-item logout-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="fa-solid fa-right-from-bracket text-danger"></i> Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="nav-link" style="white-space: nowrap;" asp-area="" asp-action="GoogleBooks" asp-controller="Home" role="button">
                            Hızlı Kitap
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-action="SendMeMessage" asp-controller="Home" role="button">
                            <i class="bi bi-phone"></i> İletişim
                        </a>
                    </li>
                </ul>

                <form class="book-search-form d-none d-lg-flex" asp-controller="Home" asp-action="@targetAction" method="get">
                    <input class="form-control book-search-input" type="search" name="q"
                           placeholder="@placeholderText" aria-label="Search" value="@ViewData["CurrentSearch"]">
                    <button class="btn book-search-btn" type="submit">
                        <i class="bi bi-search"></i>
                        Ara
                    </button>
                </form>
            </div>
        </div>
    </nav>
</header>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('.book-navbar .nav-link');

        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    });
</script>