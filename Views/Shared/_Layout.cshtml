<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-1.0" />
    <title>@ViewData["Title"] - BookManagementApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookManagementApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        html {
            height: 100%;
        }

        body {
            min-height: 100vh;
            margin: 0;
            position: relative;
        }

        .header-wrapper {
            position: relative;
            z-index: 10;
        }

        .hanging-book-container {
            position: absolute;
            top: 100%;
            /* DÜZELTME BURADA: Header'daki margin boşluğunu kapatmak için ipleri yukarı çektik */
            margin-top: -6px;
            z-index: 1040;
            pointer-events: none;
            transform-origin: top center;
            perspective: 1000px;
        }

        .rope {
            width: 2px;
            height: 40px;
            background: linear-gradient(to right, #6d4c3a, #8d6e63, #6d4c3a);
            margin: 0 auto;
            border-radius: 1px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
        }

        .book-icon {
            text-align: center;
            font-size: 1.8rem;
            color: #4a2d1f;
            line-height: 1;
            position: relative;
            transform-style: preserve-3d;
        }

            .book-icon::before {
                content: '';
                position: absolute;
                top: 0;
                left: -5px;
                width: 5px;
                height: 100%;
                background-color: #5c3e2e;
                transform: rotateY(90deg) translateZ(-5px);
                transform-origin: left;
                box-shadow: -2px 0 5px rgba(0, 0, 0, 0.4);
            }

            .book-icon::after {
                content: '';
                position: absolute;
                top: 0;
                right: -5px;
                width: 5px;
                height: 100%;
                background-color: #5c3e2e;
                transform: rotateY(-90deg) translateZ(-5px);
                transform-origin: right;
                box-shadow: 2px 0 5px rgba(0, 0, 0, 0.4);
            }

            .book-icon .fas.fa-book {
                text-shadow: -1px -1px 0 #3b2419, 1px 1px 0 #5f4236, 0 5px 10px rgba(0, 0, 0, 0.5);
            }

        .hanging-book-container.left {
            left: 30px;
            animation: gentle-swing 6s infinite ease-in-out;
        }

        .hanging-book-container.right {
            right: 30px;
            animation: gentle-swing 6s infinite ease-in-out;
            animation-delay: -3s;
        }

        @@keyframes gentle-swing {
            0%, 100%

        {
            transform: rotate(0deg);
        }

        50% {
            transform: rotate(6deg);
        }

        }

        @@media (max-width: 576px) {
            .hanging-book-container

        {
            display: none;
        }

        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <div class="header-wrapper">
        @await Component.InvokeAsync("Header")

        <div class="hanging-book-container left">
            <div class="rope"></div>
            <div class="book-icon"><i class="fas fa-book"></i></div>
        </div>
        <div class="hanging-book-container right">
            <div class="rope"></div>
            <div class="book-icon"><i class="fas fa-book"></i></div>
        </div>
    </div>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    @await Component.InvokeAsync("Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>