@using BookManagementApp.Areas.Admin.Models
@model User

@{
    ViewData["Title"] = "Register";
    Layout = "_LogRegLayout";
}

<h1 class="text-center mt-5">Kayıt Ol</h1>
<hr />

<form method="post">
    <div class="mb-2">
        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
        <input asp-for="UserName" class="form-control" /> 
    </div>
    <div class="mb-2">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="PasswordHash" class="form-label">Şifre</label>
        <input asp-for="PasswordHash" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>


