@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category List";
}

<h1 class="text-center">Category List</h1>
<hr />
<a href="/category/create" class="btn btn-outline-success mb-2">Add New</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th style="width:200px;">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td>
                    <a class="btn btn-danger" href="/category/delete/@item.Id">Delete</a>
                    <a class="btn btn-success" href="/category/edit/@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>