@model Category

@{
    ViewData["Title"] = "Category Edit";

}

<h1 class="text-center">Edit Category Page</h1>
<hr />

<form method="post" action="Edit">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-2">
        <label asp-for="CategoryName">Category Name</label>
        <input class="form-control" asp-for="CategoryName" />
    </div>
    <button class="btn btn-primary">
        Save
    </button>
</form>