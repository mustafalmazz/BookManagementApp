@{
    ViewData["Title"] = "Dijital Kütüphanem'e Hoşgeldin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DijitalKütüphanem</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        :root {
            --bg-dark: #0a0c1e;
            --bg-card: #131a38;
            --gold-primary: #8b6f47;
            --gold-light: #c89666;
            --cream-accent: #f5f0e8;
            --text-muted: #a0b0d0;
            --neon-gold-glow: 0 0 20px rgba(139, 111, 71, 0.4);
        }
        /* --- MYSTIC DOOR ANIMATION (GÜNCELLENMİŞ MOBİL & TASARIM) --- */
        .door-cta-wrapper {
            padding: 30px 0 120px;
            display: flex;
            flex-direction: column;
            align-items: center;
            perspective: 1200px;
            overflow: hidden;
            text-align: center;
        }

        /* Kapı Kapsayıcı */
        .door-container {
            position: relative;
            width: 200px; /* Mobilde biraz daha küçülttüm */
            height: 300px;
            cursor: pointer;
            transform-style: preserve-3d;
            margin-bottom: 50px; /* Yazı ile kapı arası mesafe */
        }

        /* Kapı Çerçevesi */
        .door-frame {
            position: absolute;
            top: -12px;
            left: -12px;
            right: -12px;
            bottom: 0;
            border: 6px solid #5c4d3c; /* Biraz daha açık bir ahşap tonu */
            border-bottom: none;
            border-radius: 8px 8px 0 0;
            background: #1a1c2c;
            box-shadow: 0 10px 30px rgba(0,0,0,0.6);
            z-index: 0;
        }

        /* Kapı Arkasındaki Işık */
        .light-from-inside {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at center, #fff 10%, var(--gold-light) 50%, var(--gold-primary) 100%);
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 0 60px var(--gold-primary);
            overflow: hidden;
            border-radius: 4px 4px 0 0;
        }

            .light-from-inside i {
                font-size: 3.5rem;
                color: #fff;
                opacity: 0;
                transform: scale(0.6) translateZ(-40px);
                transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) 0.1s; /* Daha yumuşak geçiş */
                text-shadow: 0 0 15px rgba(255,255,255,0.9);
            }

        /* Kapı Kanadı */
        .door-panel {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #2e2e2e;
            background-image: repeating-linear-gradient(90deg, rgba(255,255,255,0.04) 0px, rgba(255,255,255,0.04) 2px, transparent 2px, transparent 12px), linear-gradient(to bottom, #3a3a3a, #1f1f1f);
            border: 2px solid #4a3b2a;
            transform-origin: left;
            transition: transform 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center; /* Tabelayı dikey ortala */
            border-radius: 4px 4px 0 0;
            box-shadow: inset 0 0 30px rgba(0,0,0,0.8);
        }

        /* Kapı Tabelası */
        .door-sign {
            background: rgba(10, 12, 30, 0.9);
            border: 2px solid var(--gold-primary);
            padding: 10px 18px;
            color: var(--gold-primary);
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 1.1rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.4);
            text-transform: uppercase;
            letter-spacing: 1.5px;
            transform: translateZ(2px);
            transition: all 0.3s ease;
            backface-visibility: hidden; /* Dönünce arkası görünmesin */
        }

        /* Kapı Tokmağı */
        .door-knob {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            width: 14px;
            height: 14px;
            background: linear-gradient(135deg, var(--gold-light), var(--gold-primary));
            border-radius: 50%;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.6);
        }

        /* İYİLEŞTİRİLMİŞ ALT METİN TASARIMI */
        .cta-text-wrapper {
            opacity: 0.8;
            transition: all 0.4s ease;
            max-width: 500px;
            padding: 25px;
            background: rgba(19, 26, 56, 0.5); /* Hafif bir arka plan kutusu */
            border: 1px solid rgba(139, 111, 71, 0.15);
            border-radius: 20px;
            backdrop-filter: blur(5px);
            transform: translateY(20px);
        }

            .cta-text-wrapper h3 {
                font-size: 1.8rem;
                margin-bottom: 15px;
                color: var(--cream-accent);
                /* Gradient text efekti için */
                background: linear-gradient(135deg, var(--cream-accent) 0%, var(--gold-primary) 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .cta-text-wrapper p {
                font-size: 1rem;
                color: var(--text-muted);
                margin: 0;
            }

        /* HOVER EFEKTLERİ */
        .door-container:hover .door-panel {
            transform: rotateY(-115deg); /* Biraz daha fazla açılsın */
        }

        .door-container:hover .door-sign {
            background: var(--gold-primary);
            color: #0a0c1e;
            border-color: var(--gold-light);
            box-shadow: 0 0 20px var(--neon-gold-glow);
        }

        .door-container:hover .light-from-inside i {
            opacity: 1;
            transform: scale(1) translateZ(0);
        }

        /* Hover'da alt metnin parlaması */
        .door-container:hover + .cta-text-wrapper {
            opacity: 1;
            transform: translateY(0);
            border-color: rgba(139, 111, 71, 0.4);
            box-shadow: 0 10px 30px rgba(139, 111, 71, 0.15);
        }

        /* ============================================ */
        /* MOBİL UYUMLULUK (RESPONSIVE) */
        /* ============================================ */
        @@media (max-width: 768px) {
            .door-cta-wrapper

        {
            padding: 70px 0 90px;
        }

        .door-container {
            width: 160px;
            height: 240px;
            margin-bottom: 35px;
        }

        .door-frame {
            border-width: 5px;
            top: -10px;
            left: -10px;
            right: -10px;
        }

        .door-sign {
            font-size: 0.95rem;
            padding: 8px 14px;
            letter-spacing: 1px;
        }

        .light-from-inside i {
            font-size: 2.8rem;
        }

        .cta-text-wrapper {
            max-width: 90%; /* Mobilde daha geniş */
            padding: 20px 15px;
        }

            .cta-text-wrapper h3 {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .cta-text-wrapper p {
                font-size: 0.9rem;
            }

        }
        /* --- PRELOADER --- */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--bg-dark);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            transition: opacity 0.5s ease-out;
        }

        .loader-icon {
            font-size: 3rem;
            color: var(--gold-primary);
            animation: pulse 1.5s infinite;
        }

        .loader-bar {
            width: 150px;
            height: 2px;
            background: rgba(255,255,255,0.1);
            margin-top: 20px;
            border-radius: 2px;
            overflow: hidden;
        }

        .loader-progress {
            width: 0%;
            height: 100%;
            background: var(--gold-primary);
            animation: loadProgress 1.5s ease-in-out forwards;
        }
        @@keyframes loadProgress {
            0%

        {
            width: 0;
        }

        100% {
            width: 100%;
        }

        }
        @@keyframes pulse {
            0%

        {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.2);
            opacity: 0.7;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }

        }

        /* --- GENEL --- */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-dark);
            color: var(--cream-accent);
            overflow-x: hidden;
            line-height: 1.7;
        }

        /* Arka Plan Canvas (Toz Efekti İçin) */
        #particles-canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        h1, h2, h3, h4 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            color: var(--cream-accent);
        }

        /* --- Scroll Animasyon Sınıfları --- */
        .reveal {
            opacity: 0;
            transform: translateY(40px);
            transition: all 0.8s cubic-bezier(0.5, 0, 0, 1);
        }

            .reveal.active {
                opacity: 1;
                transform: translateY(0);
            }

        /* --- Tipografi --- */
        .gold-gradient-text {
            background: linear-gradient(135deg, var(--cream-accent) 0%, var(--gold-primary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 70px;
            position: relative;
            padding-bottom: 20px;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background: var(--gold-primary);
                border-radius: 2px;
            }

        /* --- NAVBAR --- */
        .landing-navbar {
            padding: 20px 0;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 100;
            transition: all 0.4s ease;
            background: transparent;
        }

            .landing-navbar.scrolled {
                background: rgba(10, 12, 30, 0.85);
                backdrop-filter: blur(12px);
                border-bottom: 1px solid rgba(139, 111, 71, 0.1);
                padding: 15px 0;
            }

        .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--cream-accent) !important;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .nav-link-custom {
            color: var(--cream-accent) !important;
            font-weight: 500;
            margin: 0 15px;
            position: relative;
            font-size: 0.95rem;
            opacity: 0.8;
            transition: 0.3s;
        }

            .nav-link-custom:hover {
                opacity: 1;
                color: var(--gold-light) !important;
            }

        /* --- BUTONLAR --- */
        .btn-gold-outline {
            color: var(--gold-primary);
            border: 2px solid var(--gold-primary);
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-gold-outline:hover {
                background: var(--gold-primary);
                color: var(--cream-accent);
                box-shadow: var(--neon-gold-glow);
            }

        .btn-gold-filled {
            background: linear-gradient(135deg, var(--gold-primary) 0%, #6b5541 100%);
            color: var(--cream-accent);
            border: none;
            padding: 12px 35px;
            border-radius: 30px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s;
            box-shadow: 0 10px 25px rgba(139, 111, 71, 0.2);
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

            .btn-gold-filled::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 0;
                height: 100%;
                background: linear-gradient(135deg, #a0785a 0%, var(--gold-primary) 100%);
                transition: 0.3s;
                z-index: -1;
            }

            .btn-gold-filled:hover::before {
                width: 100%;
            }

            .btn-gold-filled:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 35px rgba(139, 111, 71, 0.4);
                color: #fff;
            }

        /* --- HERO SECTION --- */
        .hero-section {
            padding: 180px 0 100px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .hero-bg-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 80% 20%, rgba(139, 111, 71, 0.08), transparent 40%), radial-gradient(circle at 20% 80%, rgba(10, 12, 30, 0.95), transparent 50%);
            z-index: -1;
        }

        .hero-content h1 {
            font-size: 4.5rem;
            line-height: 1.1;
            margin-bottom: 25px;
        }

        .hero-lead {
            font-size: 1.2rem;
            color: var(--text-muted);
            margin-bottom: 40px;
            max-width: 550px;
        }

        .typing-container {
            color: var(--gold-primary);
            border-right: 3px solid var(--gold-primary);
            white-space: nowrap;
            overflow: hidden;
            display: inline-block;
            animation: blinkCursor 0.75s step-end infinite;
        }
        @@keyframes blinkCursor {
            50%

        {
            border-color: transparent;
        }

        }

        /* Mockup */
        .hero-mockup-wrapper {
            position: relative;
            z-index: 1;
            perspective: 1500px;
        }

        .hero-mockup {
            width: 100%;
            border-radius: 20px;
            box-shadow: -30px 30px 80px rgba(0,0,0,0.6);
            border: 1px solid rgba(255,255,255,0.1);
            transform: rotateY(-12deg) rotateX(5deg);
            transition: transform 0.5s ease-out;
        }

            .hero-mockup:hover {
                transform: rotateY(0) rotateX(0);
            }

        /* --- INFINITE MARQUEE (Kitap Rafı) --- */
        .marquee-section {
            padding: 50px 0;
            background: rgba(255,255,255,0.01);
            border-top: 1px solid rgba(255,255,255,0.05);
            border-bottom: 1px solid rgba(255,255,255,0.05);
            overflow: hidden;
            white-space: nowrap;
            position: relative;
        }

        .marquee-content {
            display: inline-block;
            animation: marquee 60s linear infinite;
        }

        .marquee-item {
            display: inline-block;
            margin: 0 25px;
            width: 140px;
            height: 210px;
            border-radius: 5px;
            box-shadow: 5px 5px 15px rgba(0,0,0,0.5);
            transition: 0.3s;
            filter: grayscale(30%) brightness(0.8);
            object-fit: cover;
        }

            .marquee-item:hover {
                transform: scale(1.1);
                filter: grayscale(0%) brightness(1);
                z-index: 2;
                position: relative;
                box-shadow: 0 10px 30px rgba(139, 111, 71, 0.4);
            }
        @@keyframes marquee {
            0%

        {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }

        }

        /* --- FEATURES SECTION (3D TILT) --- */
        .features-section {
            padding: 100px 0;
        }

        .tilt-card {
            background: rgba(19, 26, 56, 0.6);
            border: 1px solid rgba(139, 111, 71, 0.1);
            padding: 40px;
            border-radius: 20px;
            height: 100%;
            transform-style: preserve-3d;
            transform: perspective(1000px);
            transition: transform 0.1s;
        }

        .feature-icon-box {
            width: 60px;
            height: 60px;
            background: rgba(139, 111, 71, 0.15);
            color: var(--gold-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 15px;
            font-size: 1.8rem;
            margin-bottom: 25px;
            border: 1px solid rgba(139, 111, 71, 0.2);
            transform: translateZ(20px);
        }

        .tilt-card h4 {
            transform: translateZ(30px);
            margin-bottom: 15px;
        }

        .tilt-card p {
            transform: translateZ(20px);
            color: var(--text-muted);
        }

        /* --- FAQ SECTION --- */
        .faq-section {
            padding: 100px 0;
            position: relative;
        }

        .accordion-custom {
            max-width: 800px;
            margin: 0 auto;
        }

        details {
            background: rgba(255, 255, 255, 0.02);
            margin-bottom: 15px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            overflow: hidden;
            transition: 0.3s;
        }

            details[open] {
                border-color: var(--gold-primary);
                background: rgba(139, 111, 71, 0.05);
            }

        summary {
            padding: 20px;
            cursor: pointer;
            font-weight: 600;
            font-size: 1.1rem;
            list-style: none;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            summary::after {
                content: '\f078';
                font-family: "Font Awesome 6 Free";
                font-weight: 900;
                transition: 0.3s;
                color: var(--gold-primary);
            }

        details[open] summary::after {
            transform: rotate(180deg);
        }

        .faq-content {
            padding: 0 20px 20px 20px;
            color: var(--text-muted);
            line-height: 1.6;
        }

        /* --- FOOTER --- */
        .landing-footer {
            background: #050610;
            padding: 80px 0 30px;
            border-top: 1px solid rgba(139, 111, 71, 0.1);
            color: var(--text-muted);
        }

        .footer-brand {
            font-family: 'Playfair Display';
            font-size: 1.5rem;
            color: var(--cream-accent);
            margin-bottom: 20px;
            display: block;
            text-decoration: none;
        }

        .footer-links ul {
            list-style: none;
            padding: 0;
        }

        .footer-links li {
            margin-bottom: 12px;
        }

        .footer-links a {
            color: var(--text-muted);
            text-decoration: none;
            transition: 0.3s;
        }

            .footer-links a:hover {
                color: var(--gold-primary);
                padding-left: 5px;
            }

        /* ============================================ */
        /* ENHANCED MOBILE RESPONSIVE - TAMAMEN YENİ */
        /* ============================================ */

        /* Tablet (992px ve altı) */
        @@media (max-width: 991px) {
            .hero-content h1

        {
            font-size: 3rem;
        }

        .hero-section {
            text-align: center;
            padding-top: 120px;
        }

        .hero-lead {
            margin: 0 auto 40px auto;
        }

        .hero-mockup-wrapper {
            margin-top: 60px;
            padding: 0 20px;
        }

        .hero-mockup {
            transform: none;
        }

        .navbar-collapse {
            background: rgba(10, 12, 30, 0.98);
            padding: 20px;
            border-radius: 15px;
            margin-top: 15px;
            border: 1px solid rgba(139, 111, 71, 0.2);
        }

        .section-title {
            font-size: 2.2rem;
            margin-bottom: 50px;
        }

        }

        /* Mobil (768px ve altı) - TAM OPTİMİZASYON */
        @@media (max-width: 768px) {
            /* Navbar Mobil */
            .landing-navbar

        {
            padding: 12px 0;
        }

        .navbar-brand {
            font-size: 1.2rem;
            gap: 8px;
        }

            .navbar-brand img {
                height: 32px !important;
            }

        .landing-navbar.scrolled {
            padding: 10px 0;
        }

        .navbar-collapse {
            padding: 15px;
            margin-top: 10px;
        }

        .nav-link-custom {
            margin: 8px 0;
            padding: 8px 12px;
            display: block;
            text-align: center;
        }

        /* Butonlar Mobil */
        .btn-gold-outline, .btn-gold-filled {
            padding: 10px 20px;
            font-size: 0.9rem;
            display: block;
            width: 100%;
            margin: 8px 0;
        }

        /* Hero Section Mobil */
        .hero-section {
            padding: 100px 0 60px;
            min-height: auto;
        }

        .hero-content h1 {
            font-size: 2rem;
            line-height: 1.2;
            margin-bottom: 20px;
        }

        .typing-container {
            font-size: 1.8rem;
            border-right-width: 2px;
            display: block;
            margin-top: 10px;
        }

        .hero-lead {
            font-size: 1rem;
            margin-bottom: 30px;
            padding: 0 10px;
        }

        .hero-section .d-flex.gap-3 {
            flex-direction: column;
            gap: 12px !important;
        }

        .hero-section .mt-5 {
            margin-top: 30px !important;
            flex-direction: column;
            gap: 15px;
        }

        .hero-mockup-wrapper {
            margin-top: 40px;
            padding: 0 15px;
        }

        .hero-mockup {
            border-radius: 15px;
            box-shadow: -15px 15px 40px rgba(0,0,0,0.6);
        }

        /* Marquee Mobil */
        .marquee-section {
            padding: 30px 0;
        }

        .marquee-item {
            width: 100px;
            height: 150px;
            margin: 0 15px;
        }

        /* Section Titles Mobil */
        .section-title {
            font-size: 1.8rem;
            margin-bottom: 40px;
            padding-bottom: 15px;
        }

            .section-title::after {
                width: 50px;
                height: 2px;
            }

        /* Features Section Mobil */
        .features-section {
            padding: 60px 0;
        }

        .tilt-card {
            padding: 25px 20px;
            margin-bottom: 20px;
        }

        .feature-icon-box {
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .tilt-card h4 {
            font-size: 1.3rem;
            margin-bottom: 12px;
        }

        .tilt-card p {
            font-size: 0.95rem;
            line-height: 1.6;
        }

        /* FAQ Mobil */
        .faq-section {
            padding: 60px 0;
        }

        .accordion-custom {
            padding: 0 15px;
        }

        summary {
            padding: 15px;
            font-size: 1rem;
        }

        .faq-content {
            padding: 0 15px 15px 15px;
            font-size: 0.9rem;
        }

        /* CTA Section Mobil */
        section[style*="padding: 120px"] {
            padding: 60px 0 !important;
