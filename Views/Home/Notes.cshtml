@model Book
@{
    ViewData["Title"] = "Notes for " + Model.Name;
}

<style>
    body {
        background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
        min-height: 100vh;
        font-family: 'Georgia', serif;
        position: relative;
        overflow-x: hidden;
        overflow-y: auto;
        margin: 0;
        padding: 0;
    }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: repeating-linear-gradient( 0deg, transparent, transparent 2px, rgba(139, 111, 71, 0.03) 2px, rgba(139, 111, 71, 0.03) 4px );
            pointer-events: none;
            z-index: 0;
        }

    .notes-page-wrapper {
        background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
        font-family: 'Georgia', serif;
        min-height: 100vh;
        padding: 40px 0;
    }

    .notes-container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 0 20px 60px 20px;
        animation: fadeInUp 0.8s ease;
    }

    .notes-header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

    .book-icon-display {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border-radius: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        font-size: 4rem;
        color: #f5f0e8;
        box-shadow: 0 10px 40px rgba(107, 85, 65, 0.4);
        border: 4px solid #e8dcc8;
        animation: iconFloat 3s infinite ease-in-out;
    }

    .notes-title {
        font-size: 3rem;
        font-weight: 800;
        color: #4a3f35;
        margin: 0 0 15px 0;
        text-shadow: 2px 2px 4px rgba(107, 85, 65, 0.1);
        line-height: 1.2;
    }

        .notes-title::after {
            content: '';
            display: block;
            width: 150px;
            height: 4px;
            background: linear-gradient(90deg, transparent, #8b6f47, transparent);
            margin: 20px auto 0;
            border-radius: 2px;
        }

    .notes-subtitle {
        color: #8b6f47;
        font-size: 1.3rem;
        font-style: italic;
        margin-top: 10px;
    }

    .notes-card {
        background: #fff9f0;
        border-radius: 25px;
        padding: 0;
        box-shadow: 15px 15px 40px rgba(107, 85, 65, 0.3), -5px -5px 20px rgba(255, 255, 255, 0.8);
        border: 3px solid #e8dcc8;
        position: relative;
        overflow: hidden;
        margin-bottom: 40px;
    }

        .notes-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 12px;
            height: 100%;
            background: linear-gradient(180deg, #8b6f47 0%, #6b5541 50%, #a0785a 100%);
        }

    .notes-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: linear-gradient(135deg, rgba(139, 111, 71, 0.1) 0%, rgba(107, 85, 65, 0.05) 100%);
        padding: 25px 40px;
        border-bottom: 3px solid #e8dcc8;
        position: relative;
    }

        .notes-card-header::before {
            position: absolute;
            right: 30px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 3rem;
            opacity: 0.2;
        }

    .notes-card-title {
        white-space: nowrap;
        margin-right: 20px;
        color: #4a3f35;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .notes-card-title i {
            color: #8b6f47;
            font-size: 1.8rem;
        }

    .notes-content {
        padding-top: 10px;
        padding-right: 40px;
        padding-left: 40px;
        background: linear-gradient(to bottom, #fff9f0 0%, #f5ede0 100%);
        min-height: 300px;
        position: relative;
    }

    div.notes-text {
        width: 100%;
        border: none;
        background: transparent;
        outline: none;
        font-family: 'Georgia', serif;
        min-height: 400px;
        max-height: 600px;
        overflow-y: auto;
        padding: 0px;
        margin: 0;
        color: #4a3f35;
        font-size: 1.15rem;
        line-height: 1.35;
        text-align: left;
        white-space: pre-wrap;
        word-wrap: break-word;
        position: relative;
        z-index: 0;
    }

        div.notes-text:focus {
            box-shadow: none;
        }

        div.notes-text:empty:before {
            content: attr(data-placeholder);
            color: #8b6f47;
            opacity: 0.5;
            font-style: italic;
        }

        div.notes-text strong, div.notes-text b {
            font-weight: 700;
            color: #2a2318;
            text-shadow: 0.5px 0.5px 1px rgba(0, 0, 0, 0.1);
        }

        div.notes-text em, div.notes-text i {
            font-style: italic;
            color: #5d4d42;
        }

        div.notes-text u {
            text-decoration-color: #8b6f47;
            text-decoration-thickness: 1.5px;
            text-underline-offset: 4px;
        }

        div.notes-text span[style*="background-color"] {
            padding: 1px 3px;
            line-height: 1.8;
            border-radius: 3px;
            box-shadow: 0 1px 2px rgba(0,0,0,0.08);
            display: inline;
            font-weight: normal;
            font-family: 'Georgia', serif;
        }

    .formatting-toolbar {
        display: flex;
        gap: 8px;
        margin-top: 0;
        padding-top: 0;
        border-top: none;
        flex-wrap: nowrap;
        overflow-x: auto;
        justify-content: flex-end;
        align-items: center;
        margin-left: auto;
    }

    .toolbar-btn {
        width: 38px;
        height: 38px;
        border: 2px solid #8b6f47;
        background: #fff9f0;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        color: #4a3f35;
        font-size: 1rem;
    }

        .toolbar-btn:hover {
            background: #8b6f47;
            color: #fff9f0;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(139, 111, 71, 0.3);
        }

    .color-separator {
        width: 2px;
        height: 38px;
        background: #e8dcc8;
        margin: 0 4px;
    }

    .toolbar-btn.color-btn span {
        width: 24px;
        height: 24px;
        border-radius: 4px;
        border: 1px solid rgba(0,0,0,0.1);
        display: block;
    }

    .empty-notes {
        text-align: center;
        padding: 60px 40px;
        color: #8b6f47;
    }

    .empty-notes-icon {
        font-size: 5rem;
        margin-bottom: 20px;
        opacity: 0.3;
        animation: emptyFloat 3s infinite ease-in-out;
    }

    .notebook-lines {
        position: absolute;
        top: 0;
        left: 40px;
        right: 40px;
        height: 100%;
        background-image: repeating-linear-gradient( transparent, transparent 31px, rgba(139, 111, 71, 0.1) 31px, rgba(139, 111, 71, 0.1) 33px );
        pointer-events: none;
        z-index: 0;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 40px;
        margin-bottom: 60px;
    }

    .notes-btn {
        padding: 16px 40px;
        border: none;
        border-radius: 15px;
        font-size: 1.1rem;
        font-weight: 700;
        font-family: 'Georgia', serif;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 6px 20px rgba(107, 85, 65, 0.3);
    }

        .notes-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
        }

        .notes-btn:hover::before {
            width: 300px;
            height: 300px;
        }

        .notes-btn span {
            position: relative;
            z-index: 1;
        }

    .notes-btn-edit {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
    }

        .notes-btn-edit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(107, 85, 65, 0.4);
        }

    .notes-btn-back {
        background: transparent;
        color: #6b5541;
        border: 3px solid #8b6f47;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.2);
    }

        .notes-btn-back:hover {
            background: #8b6f47;
            color: #f5f0e8;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(107, 85, 65, 0.3);
        }

    .decoration-quote {
        position: absolute;
        font-size: 8rem;
        color: #8b6f47;
        opacity: 0.03;
        pointer-events: none;
        font-family: 'Times New Roman', serif;
        font-weight: 900;
    }

        .decoration-quote.top-left {
            top: 20px;
            left: 60px;
        }

        .decoration-quote.bottom-right {
            bottom: 20px;
            right: 60px;
            transform: rotate(180deg);
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes iconFloat {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-10px) rotate(5deg);
        }
    }

    @@keyframes emptyFloat {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }
    }

    @@media (max-width: 768px) {
        .notes-card-header {
            flex-direction: column;
            align-items: flex-start;
            padding: 20px 15px;
        }

        .notes-container {
            padding: 0 15px 40px 15px;
            margin: 10px auto;
        }

        .notes-title {
            font-size: 1.8rem;
        }

            .notes-title::after {
                width: 100px;
                height: 3px;
                margin: 15px auto 0;
            }

        .book-icon-display {
            width: 80px;
            height: 80px;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .notes-header {
            margin-bottom: 30px;
        }

        .notes-card {
            border-radius: 20px;
            border-width: 2px;
            box-shadow: 10px 10px 30px rgba(107, 85, 65, 0.25), -3px -3px 15px rgba(255, 255, 255, 0.7);
        }

            .notes-card::before {
                width: 8px;
            }

        .notes-card-title {
            font-size: 1.2rem;
            white-space: normal;
            margin-right: 0;
            margin-bottom: 10px;
            width: 100%;
        }

            .notes-card-title i {
                font-size: 1.4rem;
            }

        .notes-content {
            padding: 25px 20px;
            min-height: 250px;
        }

        .notes-text {
            font-size: 1rem;
            line-height: 1.5;
            min-height: 300px;
            max-height: 500px;
        }

        .notebook-lines {
            left: 20px;
            right: 20px;
            background-image: repeating-linear-gradient( transparent, transparent 28px, rgba(139, 111, 71, 0.08) 28px, rgba(139, 111, 71, 0.08) 30px );
        }

        .action-buttons {
            flex-direction: column;
            gap: 15px;
            margin-top: 30px;
            margin-bottom: 40px;
        }

        .notes-btn {
            width: 100%;
            justify-content: center;
            padding: 14px 30px;
            font-size: 1rem;
            letter-spacing: 0.5px;
        }

        .decoration-quote {
            font-size: 5rem;
        }

            .decoration-quote.top-left {
                top: 15px;
                left: 30px;
            }

            .decoration-quote.bottom-right {
                bottom: 15px;
                right: 30px;
            }

        .formatting-toolbar {
            width: 100%;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid #e8dcc8;
            justify-content: center;
            margin-left: 0;
            gap: 6px;
            flex-wrap: wrap;
        }

        .toolbar-btn {
            width: 36px;
            height: 36px;
            font-size: 0.9rem;
        }

            .toolbar-btn.color-btn span {
                width: 20px;
                height: 20px;
            }

        .color-separator {
            height: 36px;
            margin: 0 2px;
        }
    }

    @@media (max-width: 576px) {
        .notes-title {
            font-size: 1.5rem;
        }

        .notes-card-header {
            padding: 15px 12px;
        }

        .notes-card-title {
            font-size: 1.1rem;
        }

        .notes-content {
            padding: 20px 15px;
        }

        .notes-text {
            font-size: 0.95rem;
        }

        .toolbar-btn {
            width: 34px;
            height: 34px;
            font-size: 0.85rem;
        }

        .notes-btn {
            padding: 12px 25px;
            font-size: 0.95rem;
        }

        .decoration-quote {
            font-size: 4rem;
        }
    }
</style>

<div class="notes-container">
    <div class="notes-header">
        <h2 class="notes-title">@Model.Name</h2>
    </div>

    <form method="post" id="notesForm">
        <input type="hidden" asp-for="Id" />

        <div class="notes-card">
            <div class="notes-card-header">

                <h3 class="notes-card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Notlarım
                </h3>

                <div class="formatting-toolbar">
                    <button type="button" class="toolbar-btn" onmousedown="event.preventDefault();" onclick="formatDoc('bold')" title="Kalın"><i class="fas fa-bold"></i></button>
                    <button type="button" class="toolbar-btn" onmousedown="event.preventDefault();" onclick="formatDoc('italic')" title="Eğik"><i class="fas fa-italic"></i></button>
                    <button type="button" class="toolbar-btn" onmousedown="event.preventDefault();" onclick="formatDoc('underline')" title="Altı Çizili"><i class="fas fa-underline"></i></button>

                    <div class="color-separator"></div>

                    <button type="button" class="toolbar-btn color-btn" onmousedown="event.preventDefault();" onclick="setColor('transparent')" title="Renksiz (Normal Yazı)"><span style="background: transparent; border: 2px dashed #8b6f47;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onmousedown="event.preventDefault();" onclick="setColor('#FFEB3B')" title="Sarı"><span style="background: #FFEB3B;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onmousedown="event.preventDefault();" onclick="setColor('#8BC34A')" title="Yeşil"><span style="background: #8BC34A;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onmousedown="event.preventDefault();" onclick="setColor('#42A5F5')" title="Mavi"><span style="background: #42A5F5;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onmousedown="event.preventDefault();" onclick="setColor('#FF9800')" title="Turuncu"><span style="background: #FF9800;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onmousedown="event.preventDefault();" onclick="setColor('#E91E63')" title="Pembe"><span style="background: #E91E63;"></span></button>

                    <button type="button" class="toolbar-btn" onmousedown="event.preventDefault();" onclick="resetActiveStyle()" title="Normal Yazı (Rengi Kaldır)">
                        <i class="fas fa-ban" style="font-size: 0.9rem; color: #666;"></i>
                    </button>

                    <div class="color-separator"></div>

                    <button type="button" class="toolbar-btn" onmousedown="event.preventDefault();" onclick="cleanFormat()" title="Tüm Formatı Temizle"><i class="fas fa-eraser"></i></button>
                </div>
            </div>

            <div class="notes-content">
                <div class="notebook-lines"></div>
                <div class="decoration-quote top-left">"</div>
                <div class="decoration-quote bottom-right">"</div>

                <div id="notesEditor" class="notes-text" contenteditable="true" data-placeholder="Buraya tıklayarak notlarınızı yazmaya başlayabilirsiniz...">@(Model.Notes != null ? Html.Raw(Model.Notes.Trim()) : "")</div>

                <textarea asp-for="Notes" id="hiddenNotes" style="display: none;"></textarea>
            </div>
        </div>

        <div class="action-buttons">
            <button type="submit" class="notes-btn notes-btn-edit">
                <span><i class="fas fa-save"></i> Değişiklikleri Kaydet</span>
            </button>

            <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.Id" class="notes-btn notes-btn-back">
                <span><i class="fas fa-arrow-left"></i> Geri Dön</span>
            </a>
        </div>
    </form>
</div>

<script>
    // 1. Temel Formatlama
    function formatDoc(cmd, value = null) {
        document.execCommand(cmd, false, value);
        // focusEditor() çağrısına gerek kalmadı çünkü onmousedown focus kaybını önlüyor
    }

    // 2. Renklendirme (GÜNCELLENDİ: Toggle Özelliği Eklendi)
    let activeColor = null; // Aktif rengi takip etmek için

    function setColor(color) {
        document.execCommand('styleWithCSS', false, true);

        // Eğer aynı renge tekrar tıklanırsa, rengi kapat ve normal stile dön
        if (activeColor === color) {
            document.execCommand('hiliteColor', false, 'transparent');
            document.execCommand('styleWithCSS', false, false);
            activeColor = null; // Aktif rengi sıfırla
        } else {
            // Yeni bir renk uygula
            document.execCommand('hiliteColor', false, color);
            activeColor = color; // Aktif rengi kaydet
        }
    }

    // 3. YENİ EKLENEN: Sadece Rengi ve Stili Sıfırla (Normal Yazıya Dön)
    function resetActiveStyle() {
        document.execCommand('styleWithCSS', false, true);

        // Arka plan rengini kaldır
        document.execCommand('hiliteColor', false, 'transparent');

        // Yazı rengini siyaha/koyu griye döndür (Normal yazı rengin neyse)
        document.execCommand('foreColor', false, '#4a3f35');

        // CSS modunu kapat ki temiz HTML üretsin
        document.execCommand('styleWithCSS', false, false);

        // Aktif rengi sıfırla
        activeColor = null;
    }

    // 4. Tüm Formatı Temizle (Silgi Butonu)
    function cleanFormat() {
        document.execCommand('styleWithCSS', false, false);
        document.execCommand('removeFormat', false, null); // Kalın, italik hepsini siler
        document.execCommand('hiliteColor', false, 'transparent'); // Arka planı siler

        // Aktif rengi sıfırla
        activeColor = null;
    }

    document.addEventListener("DOMContentLoaded", function() {
        const form = document.getElementById('notesForm');

        if (form) {
            form.addEventListener('submit', function(e) {
                const editor = document.getElementById('notesEditor');
                const hiddenTextarea = document.getElementById('hiddenNotes');

                if (editor && hiddenTextarea) {
                    hiddenTextarea.value = editor.innerHTML;
                } else {
                    e.preventDefault();
                }
            });
        }

        const buttons = document.querySelectorAll('.notes-btn');
        buttons.forEach(btn => {
            btn.addEventListener('mouseenter', function() { this.style.transform = 'translateY(-3px)'; });
            btn.addEventListener('mouseleave', function() { this.style.transform = 'translateY(0)'; });
        });

        const editor = document.getElementById('notesEditor');
        if (editor) {
             if (editor.textContent.trim() === '') editor.innerHTML = '';
        }
    });
</script>
