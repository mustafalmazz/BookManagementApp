@model Book
@{
    ViewData["Title"] = "Notes for " + Model.Name;
}

<style>
        body {
                background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
                min-height: 100vh;
                font-family: 'Georgia', serif;
                position: relative;
                overflow-x: hidden;
                overflow-y: auto;
                margin: 0;
                padding: 0;

    }

            body::before {
                    content: '';
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-image: repeating-linear-gradient( 0deg, transparent, transparent 2px, rgba(139, 111, 71, 0.03) 2px, rgba(139, 111, 71, 0.03) 4px );
                    pointer-events: none;
                    z-index: 0;

    }

        .notes-page-wrapper {
                background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
                font-family: 'Georgia', serif;
                min-height: 100vh;
                padding: 40px 0;

    }

        .notes-container {
                max-width: 1200px;
                margin: 20px auto;
                padding: 0 20px 60px 20px;
                animation: fadeInUp 0.8s ease;

    }

        .notes-header {
                text-align: center;
                margin-bottom: 50px;
                position: relative;

    }

        .book-icon-display {
                width: 120px;
                height: 120px;
                background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
                border-radius: 25px;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 auto 30px;
                font-size: 4rem;
                color: #f5f0e8;
                box-shadow: 0 10px 40px rgba(107, 85, 65, 0.4);
                border: 4px solid #e8dcc8;
                animation: iconFloat 3s infinite ease-in-out;

    }

        .notes-title {
                font-size: 3rem;
                font-weight: 800;
                color: #4a3f35;
                margin: 0 0 15px 0;
                text-shadow: 2px 2px 4px rgba(107, 85, 65, 0.1);
                line-height: 1.2;

    }

            .notes-title::after {
                    content: '';
                    display: block;
                    width: 150px;
                    height: 4px;
                    background: linear-gradient(90deg, transparent, #8b6f47, transparent);
                    margin: 20px auto 0;
                    border-radius: 2px;

    }

        .notes-subtitle {
                color: #8b6f47;
                font-size: 1.3rem;
                font-style: italic;
                margin-top: 10px;

    }

        .notes-card {
                background: #fff9f0;
                border-radius: 25px;
                padding: 0;
                box-shadow: 15px 15px 40px rgba(107, 85, 65, 0.3), -5px -5px 20px rgba(255, 255, 255, 0.8);
                border: 3px solid #e8dcc8;
                position: relative;
                overflow: hidden;
                margin-bottom: 40px;

    }

            .notes-card::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 12px;
                    height: 100%;
                    background: linear-gradient(180deg, #8b6f47 0%, #6b5541 50%, #a0785a 100%);

    }

        .notes-card-header {

        /* FLEXBOX DÜZENLEMESİ: Not başlığı ve araç çubuğunu yan yana getirmek için */
                display: flex;
                justify-content: space-between; /* İki ana elemanı ayır */
                align-items: center; /* Dikeyde ortala */

                        background: linear-gradient(135deg, rgba(139, 111, 71, 0.1) 0%, rgba(107, 85, 65, 0.05) 100%);
                padding: 25px 40px;
                border-bottom: 3px solid #e8dcc8;
                position: relative;

    }

            .notes-card-header::before {
                    position: absolute;
                    right: 30px;
                    top: 50%;
                    transform: translateY(-50%);
                    font-size: 3rem;
                    opacity: 0.2;

    }

        .notes-card-title {

        /* Başlığın gereğinden fazla yer kaplamasını engelle */
                white-space: nowrap;
                margin-right: 20px;
                color: #4a3f35;
                font-size: 1.5rem;
                font-weight: 700;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 12px;

    }

            .notes-card-title i {
                    color: #8b6f47;
                    font-size: 1.8rem;

    }

        .notes-content {
                padding: 40px;
                background: linear-gradient(to bottom, #fff9f0 0%, #f5ede0 100%);
                min-height: 300px;
                position: relative;

    }


    /* ContentEditable Styles */
        div.notes-text {
                width: 100%;
                border: none;
                background: transparent;
                outline: none;
                font-family: 'Georgia', serif;
                min-height: 400px;
                max-height: 600px;
                overflow-y: auto;
                padding: 10px;
                margin: 0;
                color: #4a3f35;
                font-size: 1.15rem;
                line-height: 1.9;
                text-align: justify;
                white-space: pre-wrap;
                word-wrap: break-word;
                position: relative;
                z-index: 1;

    }

                div.notes-text:focus {
                        box-shadow: none;

        }


    /* Boş durum placeholder */
            div.notes-text:empty:before {
                    content: attr(data-placeholder);
                    color: #8b6f47;
                    opacity: 0.5;
                    font-style: italic;

    }


    /* --- DÜZENLENMİŞ STİLLER (Önceki geliştirme) --- */
            div.notes-text strong, div.notes-text b {
                    font-weight: 700;
                    color: #2a2318;
                    text-shadow: 0.5px 0.5px 1px rgba(0, 0, 0, 0.1);

    }

            div.notes-text em, div.notes-text i {
                    font-style: italic;
                    color: #5d4d42;

    }

            div.notes-text u {
                    text-decoration-color: #8b6f47;
                    text-decoration-thickness: 1.5px;
                    text-underline-offset: 4px;

    }

            div.notes-text span[style*="background-color"] {
                    padding: 1px 3px;
                    line-height: 1.8;
                    border-radius: 3px;
                    box-shadow: 0 1px 2px rgba(0,0,0,0.08);
                    display: inline;

    }

            div.notes-text span[style*="color"] {
                    font-weight: 600;

    }


    /* --- TOOLBAR STYLES --- */
        .formatting-toolbar {

        /* YENİ: Başlık yanına gelmesi için flexbox ile uyumlu ayarlar */
                display: flex;
                gap: 8px;
                margin-top: 0;
                padding-top: 0;
                border-top: none; /* Üst çizgiyi kaldır */
                flex-wrap: nowrap; /* Butonların tek satırda kalmasını sağla */
                overflow-x: auto; /* Taşan olursa yatay kaydırma çubuğu göster */
                justify-content: flex-end; /* Butonları sağa yasla */
                align-items: center; /* Dikeyde ortala */
        margin-left: auto; /* Başlık alanını koru ve geri kalanı sağa it */

    }

        .toolbar-btn {
                width: 38px;
                height: 38px;
                border: 2px solid #8b6f47;
                background: #fff9f0;
                border-radius: 8px;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
                color: #4a3f35;
                font-size: 1rem;

    }

            .toolbar-btn:hover {
                    background: #8b6f47;
                    color: #fff9f0;
                    transform: translateY(-2px);
                    box-shadow: 0 4px 12px rgba(139, 111, 71, 0.3);

    }

        .color-separator {
                width: 2px;
                height: 38px;
                background: #e8dcc8;
                margin: 0 4px;

    }


    /* Renk kutucukları */
        .toolbar-btn.color-btn span {
                width: 24px;
                height: 24px;
                border-radius: 4px;
                border: 1px solid rgba(0,0,0,0.1);
                display: block;

    }

        .empty-notes {
                text-align: center;
                padding: 60px 40px;
                color: #8b6f47;

    }

        .empty-notes-icon {
                font-size: 5rem;
                margin-bottom: 20px;
                opacity: 0.3;
                animation: emptyFloat 3s infinite ease-in-out;

    }

        .notebook-lines {
                position: absolute;
                top: 0;
                left: 40px;
                right: 40px;
                height: 100%;
                background-image: repeating-linear-gradient( transparent, transparent 31px, rgba(139, 111, 71, 0.1) 31px, rgba(139, 111, 71, 0.1) 33px );
                pointer-events: none;
                z-index: 0;

    }

        .action-buttons {
                display: flex;
                justify-content: center;
                gap: 20px;
                margin-top: 40px;
                margin-bottom: 60px;

    }

        .notes-btn {
                padding: 16px 40px;
                border: none;
                border-radius: 15px;
                font-size: 1.1rem;
                font-weight: 700;
                font-family: 'Georgia', serif;
                text-transform: uppercase;
                letter-spacing: 1px;
                cursor: pointer;
                transition: all 0.3s ease;
                position: relative;
                overflow: hidden;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 10px;
                box-shadow: 0 6px 20px rgba(107, 85, 65, 0.3);

    }

            .notes-btn::before {
                    content: '';
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    width: 0;
                    height: 0;
                    border-radius: 50%;
                    /* transform: translate(-50%, -50%); */
                    /* transition: width 0.6s, height 0.6s; */

    }

            .notes-btn:hover::before {
                    width: 300px;
                    height: 300px;

    }

            .notes-btn span {
                    position: relative;
                    z-index: 1;

    }

        .notes-btn-edit {
                background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
                color: #f5f0e8;

    }

            .notes-btn-edit:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 10px 30px rgba(107, 85, 65, 0.4);

    }

        .notes-btn-back {
                background: transparent;
                color: #6b5541;
                border: 3px solid #8b6f47;
                box-shadow: 0 4px 15px rgba(107, 85, 65, 0.2);

    }

            .notes-btn-back:hover {
                    background: #8b6f47;
                    color: #f5f0e8;
                    transform: translateY(-3px);
                    box-shadow: 0 8px 25px rgba(107, 85, 65, 0.3);

    }

        .decoration-quote {
                position: absolute;
                font-size: 8rem;
                color: #8b6f47;
                opacity: 0.03;
                pointer-events: none;
                font-family: 'Times New Roman', serif;
                font-weight: 900;

    }

            .decoration-quote.top-left {
                    top: 20px;
                    left: 60px;

    }

            .decoration-quote.bottom-right {
                    bottom: 20px;
                    right: 60px;
                    transform: rotate(180deg);

    }


    /* Animations */
        @@keyframes fadeInUp {
                from

    {
                    opacity: 0;
                    transform: translateY(50px);

    }

            to {
                    opacity: 1;
                    transform: translateY(0);

    }


    }

        @@keyframes iconFloat {
                0%, 100%

    {
                    transform: translateY(0) rotate(0deg);

    }

            50% {
                    transform: translateY(-10px) rotate(5deg);

    }


    }

        @@keyframes emptyFloat {
                0%, 100%

    {
                    transform: translateY(0);

    }

            50% {
                    transform: translateY(-15px);

    }


    }

        @@media (max-width: 768px) {
                .notes-card-header

    {
                    flex-direction: column; /* Mobil cihazlarda alt alta yığılmalı */
                    align-items: flex-start;
                    padding: 20px;

    }

            .notes-container {
                    padding: 0 15px;

    }

            .notes-title {
                    font-size: 2rem;

    }

            .book-icon-display {
                    width: 90px;
                    height: 90px;
                    font-size: 3rem;

    }

            .notes-content {
                    padding: 30px 25px;

    }

            .notes-text {
                    font-size: 1.05rem;

    }

            .action-buttons {
                    flex-direction: column;

    }

            .notes-btn {
                    width: 100%;
                    justify-content: center;

    }

            .decoration-quote {
                    font-size: 5rem;

    }

    .formatting-toolbar {
        width: 100%;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 2px solid #e8dcc8; /* Ayırıcı çizgiyi geri getir */
        justify-content: center; /* Mobil görünümde ortala */
        margin-left: 0;
    }


    }
</style>

<div class="notes-container">
    <div class="notes-header">
        <h2 class="notes-title">@Model.Name</h2>
    </div>

    <form method="post" id="notesForm">
        <input type="hidden" asp-for="Id" />

        <div class="notes-card">
            <div class="notes-card-header">

                <h3 class="notes-card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Notlarım
                </h3>

                <div class="formatting-toolbar">
                    <button type="button" class="toolbar-btn" onclick="formatDoc('bold')" title="Kalın"><i class="fas fa-bold"></i></button>
                    <button type="button" class="toolbar-btn" onclick="formatDoc('italic')" title="Eğik"><i class="fas fa-italic"></i></button>
                    <button type="button" class="toolbar-btn" onclick="formatDoc('underline')" title="Altı Çizili"><i class="fas fa-underline"></i></button>

                    <div class="color-separator"></div>

                    <button type="button" class="toolbar-btn color-btn" onclick="setColor('#FFEB3B')" title="Sarı"><span style="background: #FFEB3B;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onclick="setColor('#8BC34A')" title="Yeşil"><span style="background: #8BC34A;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onclick="setColor('#42A5F5')" title="Mavi"><span style="background: #42A5F5;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onclick="setColor('#FF9800')" title="Turuncu"><span style="background: #FF9800;"></span></button>
                    <button type="button" class="toolbar-btn color-btn" onclick="setColor('#E91E63')" title="Pembe"><span style="background: #E91E63;"></span></button>

                    <div class="color-separator"></div>

                    <button type="button" class="toolbar-btn" onclick="cleanFormat()" title="Formatı Temizle"><i class="fas fa-eraser"></i></button>
                </div>
            </div>

            <div class="notes-content">
                <div class="notebook-lines"></div>
                <div class="decoration-quote top-left">"</div>
                <div class="decoration-quote bottom-right">"</div>

                <div id="notesEditor"
                                class="notes-text"
                                contenteditable="true"
                                data-placeholder="Buraya tıklayarak notlarınızı yazmaya başlayabilirsiniz...">
                    @(Model.Notes != null ? Html.Raw(Model.Notes.TrimStart().PadLeft(Model.Notes.TrimStart().Length + 4, ' ')) : "")
                </div>

                <textarea asp-for="Notes" id="hiddenNotes" style="display: none;"></textarea>
            </div>
        </div>

        <div class="action-buttons">
            <button type="submit" class="notes-btn notes-btn-edit">
                <span><i class="fas fa-save"></i> Değişiklikleri Kaydet</span>
            </button>

            <a href="#" class="notes-btn notes-btn-back">
                <span><i class="fas fa-arrow-left"></i> Geri Dön</span>
            </a>
        </div>
    </form>
</div>

<script>
    // --- YENİLENEN MANTIK ---

    // 1. Temel Formatlama (Kalın, İtalik vb.)
    function formatDoc(cmd, value = null) {
        document.execCommand(cmd, false, value);
        focusEditor();
    }

    // 2. Renklendirme Mantığı (Vurgu)
    function setColor(color) {
        // Modern tarayıcılarda CSS stillerini kullanmasını sağla
        document.execCommand('styleWithCSS', false, true);

        // 'hiliteColor' komutu, mevcut arka plan rengi varsa onu silip yenisini yazar.
        document.execCommand('hiliteColor', false, color);

        focusEditor();
    }

    // 3. Temizleme Mantığı (GELİŞTİRİLDİ: Metin rengini de varsayılana döndürür)
    function cleanFormat() {
        // 'styleWithCSS' modunu kapatalım
        document.execCommand('styleWithCSS', false, false);

        // Önce yazının kalınlığını, yatıklığını temizle
        document.execCommand('removeFormat', false, null);

        // Arka plan rengini manuel olarak 'transparent' yaparak krem rengi lekesini temizle
        document.execCommand('hiliteColor', false, 'transparent');
        document.execCommand('backColor', false, 'transparent');   

        // Metin rengini de varsayılana (koyu kahve) döndür
        document.execCommand('foreColor', false, '#4a3f35');

        focusEditor();
    }

    function focusEditor() {
        const editor = document.getElementById('notesEditor');
        editor.focus();
    }

    // Form Gönderim İşlemleri (Aynen korundu)
    document.addEventListener("DOMContentLoaded", function() {
        const form = document.getElementById('notesForm');

        if (form) {
            form.addEventListener('submit', function(e) {
                const editor = document.getElementById('notesEditor');
                const hiddenTextarea = document.getElementById('hiddenNotes');

                if (editor && hiddenTextarea) {
                    hiddenTextarea.value = editor.innerHTML;
                } else {
                    e.preventDefault();
                }
            });
        }

        // Buton animasyonları
        const buttons = document.querySelectorAll('.notes-btn');
        buttons.forEach(btn => {
            btn.addEventListener('mouseenter', function() { this.style.transform = 'translateY(-3px)'; });
            btn.addEventListener('mouseleave', function() { this.style.transform = 'translateY(0)'; });
        });

        // Boş içerik kontrolü
        const editor = document.getElementById('notesEditor');
        if (editor) {
             if (editor.textContent.trim() === '') editor.innerHTML = '';
        }
    });
</script>