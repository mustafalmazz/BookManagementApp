@model Book
@{
    ViewData["Title"] = "Kitap Detayları";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
        font-family: 'Georgia', serif;
    }

    .page-header {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 40px 0 30px;
        margin-bottom: 40px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.05" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,138.7C960,139,1056,117,1152,106.7C1248,96,1344,96,1392,96L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
            background-size: cover;
        }

        .page-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
        }

    .details-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px 60px;
    }

    .book-details-card {
        background: #fff9f0;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(107, 85, 65, 0.25);
        position: relative;
    }

        .book-details-card::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 20px;
            background: radial-gradient(circle, rgba(255, 215, 130, 0.3) 0%, rgba(205, 164, 94, 0.2) 30%, rgba(139, 111, 71, 0.1) 60%, transparent 100%);
            transform: translate(-50%, -50%);
            z-index: 0;
            animation: ambient-glow 4s infinite;
        }

    @@keyframes ambient-glow {
        0%, 100%

    {
        width: 90%;
        height: 90%;
        opacity: 0.5;
    }

    50% {
        width: 95%;
        height: 95%;
        opacity: 0.8;
    }

    }

    .book-image-section {
        position: relative;
        z-index: 1;
        padding: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f5ede0 0%, #e8dcc8 100%);
    }

    .book-image-wrapper {
        position: relative;
        max-width: 400px;
        width: 100%;
    }

        .book-image-wrapper img {
            width: 100%;
            height: auto;
            max-height: 550px;
            object-fit: cover;
            border-radius: 15px;
            box-shadow: 0 15px 40px rgba(107, 85, 65, 0.4);
            border: 4px solid #8b6f47;
        }

    .book-info-section {
        position: relative;
        z-index: 1;
        padding: 40px;
    }

    .book-title {
        color: #4a3f35;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.05);
    }

    .book-author {
        color: #8b6f47;
        font-size: 1.5rem;
        font-style: italic;
        margin-bottom: 25px;
        font-weight: 500;
    }

    .info-group {
        margin-bottom: 25px;
        padding: 20px;
        background: linear-gradient(to right, #f5ede0, transparent);
        border-left: 4px solid #8b6f47;
        border-radius: 8px;
    }

    .info-label {
        color: #6b5541;
        font-weight: 600;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
        display: block;
    }

    .info-value {
        color: #4a3f35;
        font-size: 1.2rem;
    }

    .book-price {
        font-size: 2.5rem;
        color: #a0785a;
        font-weight: 700;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        margin: 20px 0;
    }

    .book-category {
        display: inline-block;
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 10px 20px;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(107, 85, 65, 0.3);
        margin-bottom: 20px;
    }

    .stock-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.95rem;
    }

    .stock-available {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
    }

    .stock-low {
        background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%);
        color: white;
    }

    .stock-out {
        background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
        color: white;
    }

    .description-box {
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        border: 2px solid #e8dcc8;
        margin-top: 30px;
        line-height: 1.8;
        color: #4a3f35;
        font-size: 1.1rem;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .btn-custom {
        padding: 14px 35px;
        border-radius: 30px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 1rem;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
    }

        .btn-primary-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(107, 85, 65, 0.4);
            color: #f5f0e8;
        }

    .btn-secondary-custom {
        background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
        color: #f5f0e8;
    }

        .btn-secondary-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(160, 120, 90, 0.4);
            color: #f5f0e8;
        }

    .decorative-line {
        height: 2px;
        background: linear-gradient(90deg, transparent, #8b6f47, transparent);
        margin: 30px 0;
    }

    @@media (max-width: 768px) {
        .book-title

    {
        font-size: 2rem;
    }

    .book-image-section {
        padding: 30px 20px;
    }

    .book-info-section {
        padding: 30px 20px;
    }

    }
</style>

<div class="page-header">
    <div class="container">
        <h1 class="text-center">
            <span style="font-size: 2rem; margin-right: 15px;">📖</span>
            Kitap Detayları
        </h1>
    </div>
</div>

<div class="details-container">
    <div class="book-details-card">
        <div class="row g-0">
            <div class="col-lg-5">
                <div class="book-image-section">
                    <div class="book-image-wrapper">
                        <img src="@(string.IsNullOrEmpty(Model.Image) ? "/images/no-image.png" : Model.Image)"
                             alt="@Model.Name"
                             class="img-fluid">
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="book-info-section">
                    <h2 class="book-title">@Model.Name</h2>
                    <p class="book-author">@Model.Author</p>

                    <div class="decorative-line"></div>

                    @if (Model.Category != null)
                    {
                        <div class="mb-3">
                            <span class="book-category">📚 @Model.Category.CategoryName</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="description-box">
                            <strong style="color: #6b5541; font-size: 1.1rem; display: block; margin-bottom: 10px;">📝 Açıklama</strong>
                            @Model.Description
                        </div>
                        <br />
                    }

                    

                    <div class="info-group">
                        <span class="info-label">Fiyat</span>
                        <div class="book-price">@Model.Price.ToString("0.00") ₺</div>
                    </div>

                    <div class="info-group">
                        <span class="info-label">Stok Durumu</span>
                        <div class="info-value">
                            @if (Model.Stock > 10)
                            {
                                <span class="stock-badge stock-available">✓ Stokta (@Model.Stock adet)</span>
                            }
                            else if (Model.Stock > 0)
                            {
                                <span class="stock-badge stock-low">⚠ Son @Model.Stock adet</span>
                            }
                            else
                            {
                                <span class="stock-badge stock-out">✗ Stokta Yok</span>
                            }
                        </div>
                    </div>

                    <div class="info-group">
                        <span class="info-label">Eklenme Tarihi</span>
                        <div class="info-value">@Model.CreateDate.ToString("dd MMMM yyyy")</div>
                    </div>

                    <div class="action-buttons">
                        <a href="/Books" class="btn btn-secondary-custom">
                            ← Kitaplara Dön
                        </a>
                        <a href="/Books/Edit/@Model.Id" class="btn btn-primary-custom">
                            ✏️ Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>