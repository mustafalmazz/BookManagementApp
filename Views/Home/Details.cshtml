@model Book
@{
    ViewData["Title"] = Model.Name + " - Detaylar";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
        font-family: 'Georgia', serif;
    }

    .details-container {
        padding: 60px 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .breadcrumb-wrapper {
        background: rgba(255, 255, 255, 0.5);
        padding: 15px 25px;
        border-radius: 15px;
        margin-bottom: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 2px 10px rgba(107, 85, 65, 0.1);
    }

    .breadcrumb {
        background: none;
        margin: 0;
        padding: 0;
        font-family: 'Georgia', serif;
    }

    .breadcrumb-item a {
        color: #8b6f47;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .breadcrumb-item a:hover {
            color: #6b5541;
        }

    .breadcrumb-item.active {
        color: #4a3f35;
        font-weight: 600;
    }

    .book-details-card {
        background: #fff9f0;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(107, 85, 65, 0.2);
        position: relative;
    }

        .book-details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #8b6f47, #6b5541);
        }

    .image-section {
        padding: 40px;
        background: linear-gradient(135deg, #f5ede0 0%, #e8dcc8 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .book-image-wrapper {
        position: relative;
        max-width: 450px;
        width: 100%;
    }

    .book-image {
        width: 100%;
        height: auto;
        border-radius: 15px;
        box-shadow: 0 15px 50px rgba(107, 85, 65, 0.4);
        transition: transform 0.4s ease;
    }

        .book-image:hover {
            transform: scale(1.05);
        }

    .stock-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, #48bb78, #38a169);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1rem;
        box-shadow: 0 4px 15px rgba(72, 187, 120, 0.4);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .stock-badge.out-of-stock {
            background: linear-gradient(135deg, #f56565, #e53e3e);
            box-shadow: 0 4px 15px rgba(245, 101, 101, 0.4);
        }

    .info-section {
        padding: 50px 40px;
    }

    .book-title {
        font-size: 2.8rem;
        font-weight: 800;
        color: #4a3f35;
        margin-bottom: 15px;
        line-height: 1.3;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .book-author {
        font-size: 1.5rem;
        color: #8b6f47;
        font-style: italic;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .author-icon {
        font-size: 1.8rem;
    }

    .book-category-badge {
        display: inline-block;
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 10px 25px;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.3);
    }

    .price-section {
        background: linear-gradient(135deg, #ffd782 0%, #f5c35a 100%);
        padding: 25px 30px;
        border-radius: 20px;
        margin: 30px 0;
        box-shadow: 0 8px 25px rgba(255, 215, 130, 0.4);
    }

    .price-label {
        font-size: 1.1rem;
        color: #6b5541;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .price-value {
        font-size: 3rem;
        font-weight: 800;
        color: #4a3f35;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .description-section {
        margin: 30px 0;
        padding: 25px;
        background: rgba(245, 237, 224, 0.5);
        border-radius: 15px;
        border-left: 5px solid #8b6f47;
    }

    .description-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #4a3f35;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .description-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #4a3f35;
        text-align: justify;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin: 30px 0;
    }

    .info-item {
        background: rgba(255, 255, 255, 0.7);
        padding: 20px;
        border-radius: 15px;
        border: 2px solid rgba(139, 111, 71, 0.2);
        transition: all 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(107, 85, 65, 0.2);
            border-color: #8b6f47;
        }

    .info-label {
        font-size: 0.9rem;
        color: #8b6f47;
        font-weight: 600;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .info-value {
        font-size: 1.3rem;
        color: #4a3f35;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 40px;
        flex-wrap: wrap;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 18px 40px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 6px 20px rgba(107, 85, 65, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

        .btn-primary-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(107, 85, 65, 0.5);
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
            color: #f5f0e8;
        }

    .btn-secondary-custom {
        background: transparent;
        border: 3px solid #8b6f47;
        color: #8b6f47;
        padding: 15px 35px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

        .btn-secondary-custom:hover {
            background: #8b6f47;
            color: #f5f0e8;
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(107, 85, 65, 0.3);
        }

    .decorative-divider {
        height: 3px;
        background: linear-gradient(90deg, transparent, #8b6f47, transparent);
        margin: 40px 0;
    }

    @@media (max-width: 768px) {
        .book-title

    {
        font-size: 2rem;
    }

    .book-author {
        font-size: 1.2rem;
    }

    .price-value {
        font-size: 2.2rem;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    .action-buttons {
        flex-direction: column;
    }

    .btn-primary-custom,
    .btn-secondary-custom {
        width: 100%;
        justify-content: center;
    }

    .image-section {
        padding: 30px 20px;
    }

    .info-section {
        padding: 30px 20px;
    }

    }
</style>

<div class="details-container">
    <div class="container">
        <!-- Breadcrumb -->
        <nav class="breadcrumb-wrapper" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/Books/List"><i class="bi bi-house-door"></i> Ana Sayfa</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Books/List">Kitaplar</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>

        <!-- Main Content -->
        <div class="book-details-card">
            <div class="row g-0">
                <!-- Image Section -->
                <div class="col-lg-5 image-section">
                    <div class="book-image-wrapper">
                        <img src="@(string.IsNullOrEmpty(Model.Image) ? "/images/no-image.png" : Model.Image)"
                             class="book-image"
                             alt="@Model.Name">

                        @if (Model.Stock > 0)
                        {
                            <div class="stock-badge">
                                <i class="bi bi-check-circle-fill"></i>
                                Stokta (@Model.Stock adet)
                            </div>
                        }
                        else
                        {
                            <div class="stock-badge out-of-stock">
                                <i class="bi bi-x-circle-fill"></i>
                                Stokta Yok
                            </div>
                        }
                    </div>
                </div>

                <!-- Info Section -->
                <div class="col-lg-7 info-section">
                    <h1 class="book-title">@Model.Name</h1>

                    <div class="book-author">
                        <span class="author-icon">✍️</span>
                        @Model.Author
                    </div>

                    @if (Model.Category != null)
                    {
                        <span class="book-category-badge">
                            <i class="bi bi-tag-fill"></i> @Model.Category.CategoryName
                        </span>
                    }

                    <div class="price-section">
                        <div class="price-label">Fiyat</div>
                        <div class="price-value">@Model.Price.ToString("0.00") ₺</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="description-section">
                            <h3 class="description-title">
                                <i class="bi bi-book-half"></i>
                                Açıklama
                            </h3>
                            <p class="description-text">@Model.Description</p>
                        </div>
                    }

                    <div class="decorative-divider"></div>

                    <!-- Info Grid -->
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">
                                <i class="bi bi-box-seam"></i> Stok Durumu
                            </div>
                            <div class="info-value">
                                @if (Model.Stock > 0)
                                {
                                    <i class="bi bi-check-circle-fill" style="color: #48bb78;"></i>
                                    <span>@Model.Stock adet mevcut</span>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill" style="color: #f56565;"></i>
                                    <span>Tükendi</span>
                                }
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">
                                <i class="bi bi-calendar-check"></i> Eklenme Tarihi
                            </div>
                            <div class="info-value">
                                <i class="bi bi-calendar3"></i>
                                @Model.CreateDate.ToString("dd MMMM yyyy")
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        @if (Model.Stock > 0)
                        {
                            <a href="#" class="btn-primary-custom">
                                <i class="bi bi-cart-plus"></i>
                                Sepete Ekle
                            </a>
                        }
                        else
                        {
                            <button class="btn-primary-custom" disabled style="opacity: 0.6; cursor: not-allowed;">
                                <i class="bi bi-x-circle"></i>
                                Stokta Yok
                            </button>
                        }

                        <a href="/Books/List" class="btn-secondary-custom">
                            <i class="bi bi-arrow-left-circle"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>