    .row .col-5 {
        flex: 0 0 100%;
        max-width: 100%;
        margin-bottom: 15px;
    }

    .rating {
        font-size: 1.1rem;
        margin-bottom: 5px; /* Alt boşluk azaltıldı */
        justify-content: flex-start;
        flex-wrap: wrap;
    }

        .rating i {
            font-size: 24px !important;
        }

    .price-value {
        font-size: 2.2rem;
    }

    .price-section {
        padding: 20px;
        margin: 20px 0;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    .action-buttons {
        flex-direction: column;
    }

    .btn-primary-custom,
    .btn-secondary-custom {
        width: 100%;
        justify-content: center;
        font-size: 1rem;
        padding: 14px 30px;
    }

    .btn-notes-primary {
        width: 100%;
        justify-content: center;
        font-size: 0.9rem;
        padding: 10px 20px;
    }

    .btn-secondary-mini {
        font-size: 0.8rem;
        padding: 6px 12px;
    }

    .image-section {
        padding: 45px 30px;
    }

    .info-section {
        padding: 30px 20px;
    }

    .stock-badge {
        top: 10px;
        right: 10px;
        padding: 8px 15px;
        font-size: 0.9rem;
    }

    .book-category-badge {
        padding: 8px 20px;
        font-size: 0.9rem;
    }

    .description-section {
        padding: 20px 15px;
        margin: 20px 0;
    }

    .description-title {
        font-size: 1.3rem;
    }

    .description-text {
        font-size: 1rem;
        line-height: 1.6;
    }

    .info-item {
        padding: 15px;
    }

    .info-label {
        font-size: 0.8rem;
    }

    .info-value {
        font-size: 1.1rem;
    }

    .decorative-divider {
        margin: 25px 0;
    }

    /* Mobilde kitapları yan yana 2'li göster */
    .books-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }

    /* Mobilde kitap kartlarını küçült */
    .book-card .card-img-top {
        height: 200px;
    }

    .book-card .card-body {
        padding: 8px;
    }

    .card-title {
        font-size: 0.90rem;
        min-height: 35px;
        margin-bottom: 4px;
    }

    .author-name {
        font-size: 0.75rem;
        margin-bottom: 6px;
    }

    .details-btn {
        padding: 8px 15px;
        font-size: 0.60rem;
        letter-spacing: 0.5px;
    }

    }

    /* Ekstra küçük ekranlar için */
    @@media (max-width: 576px) {
        .book-title

    {
        font-size: 1.6rem;
    }

    .rating {
        font-size: 1rem;
    }

        .rating i {
            font-size: 20px !important;
        }

    .price-value {
        font-size: 1.8rem;
    }

    .description-title {
        font-size: 1.2rem;
    }

    .description-text {
        font-size: 0.95rem;
    }

    .btn-primary-custom,
    .btn-secondary-custom {
        font-size: 0.9rem;
        padding: 12px 25px;
    }

    .info-section {
        padding: 25px 15px;
    }

    .breadcrumb {
        font-size: 0.9rem;
    }

    }
</style>

<div class="details-container">
    <div class="container">
        <nav class="breadcrumb-wrapper" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/Home/Index">Kitaplar</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Book?.Name</li>
            </ol>
        </nav>

        <div class="book-details-card">
            <div class="row g-0">
                <div class="col-lg-5 image-section">
                    <div class="book-image-wrapper">
                        <img src="@(string.IsNullOrEmpty(Model.Book.Image) ? "/images/ResimBulunamadi.png" : Model.Book.Image)"
                             class="book-image"
                             alt="@Model.Book.Name">
                    </div>
                </div>

                <div class="col-lg-7 info-section">
                    <h1 class="book-title">@Model.Book.Name</h1>
                    @if (!string.IsNullOrEmpty(Model.Book.Description))
                    {
                        var shortDesc = Model.Book.Description.Length > 260
                        ? Model.Book.Description.Substring(0, 260) + "..."
                        : Model.Book.Description;
                        <div class="description-section">
                            <h3 class="description-title">
                                <i class="bi bi-book-half"></i>
                                Kitap Özeti
                            </h3>

                            <p id="shortDesc" class="description-text">@shortDesc</p>

                            @if (Model.Book.Description.Length > 260)
                            {
                                <p id="fullDesc" class="description-text" style="display:none;">@Model.Book.Description</p>
                                <a href="javascript:void(0)" id="toggleDesc" class="btn-secondary-mini">
                                    Devamını Oku <i class="fa-solid fa-arrow-right"></i>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="description-section">
                            <h3 class="description-title">
                                <i class="bi bi-book-half"></i>
                                Kitap Özeti
                            </h3>
                            <p class="description-text text-muted"><br /><em>Henüz bu kitaba ait özet eklenmedi.</em><br /><br /></p>
                        </div>
                    }

                    <div class="decorative-divider"></div>

                    <div class="row">
                        <div class="book-author col-6">
                            <i class="fa-solid fa-feather"></i>
                            @Model.Book.Author
                        </div>
                        <div class="book-author col-6">
                            <i class="fa-solid fa-layer-group"></i> @Model.Book.Category.CategoryName
                        </div>
                    </div>

                    <div class="row">
                        <div class="book-author col-6">
                            <i class="fa-solid fa-calendar"></i>@Model.Book.CreateDate.ToString("dd MMMM yyyy")
                        </div>
                        <div class="book-author col-6">
                            <i class="fa-solid fa-scroll"></i>@Model.Book.TotalPages Sayfa
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-7">
                            <text class="rating">Puanım/ </text>
                            @if (Model.Book.Rate.HasValue)
                            {
                                double rate = Convert.ToDouble(Model.Book.Rate.Value);
                                int fullStars = (int)Math.Floor(rate);
                                bool hasHalfStar = (rate - fullStars) >= 0.5;

                                @for (int i = 0; i < fullStars; i++)
                                {
                                    <i style="font-size:20px;" class="fa-solid fa-star text-warning"></i>
                                }

                                @if (hasHalfStar)
                                {
                                    <i style="font-size:20px;" class="fa-solid fa-star-half-stroke text-warning"></i>
                                }

                                @for (int i = 0; i < (5 - fullStars - (hasHalfStar ? 1 : 0)); i++)
                                {
                                    <i style="font-size:20px;" class="fa-regular fa-star text-warning"></i>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Henüz Puanlanmadı</span>
                            }
                        </div>
                        <div class="col-5">
                            <a href="/home/notes/@Model.Book?.Id" class="btn-notes-primary">Aldığım Notlar    <i class="fa-solid fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (Model.RelatedBooks != null && Model.RelatedBooks.Any())
        {
            <h2 class="text-center mb-2 my-4" style="color:#4a3f35;">Aynı Kategoriden Kitaplar</h2>
            <div class="decorative-divider"></div>

            <div class="books-grid">
                @foreach (var book in Model.RelatedBooks)
                {
                    <div class="book-card" data-pages="@book.TotalPages">
                        <img src="@(string.IsNullOrEmpty(book.Image) ? "/images/ResimBulunamadi.png" : book.Image)"
                             class="card-img-top"
                             alt="@book.Name">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">@book.Name</h5>
                            <p class="author-name text-center"><i class="fa-solid fa-feather"></i> @book.Author</p>
                            <div class="mt-auto text-center">
                                <a href="/Home/Details/@book.Id" class="btn details-btn">
                                    Detayları Gör
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center mt-4 text-muted">
                Bu kategorideki tek kitap
            </div>
        }

    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("toggleDesc");
        if (toggleBtn) {
            toggleBtn.addEventListener("click", function () {
                const shortDesc = document.getElementById("shortDesc");
                const fullDesc = document.getElementById("fullDesc");

                if (fullDesc.style.display === "none") {
                    fullDesc.style.display = "block";
