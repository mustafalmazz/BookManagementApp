@using BookManagementApp.Areas.Admin.Models
@model BookDetailsViewModel
@{
    ViewData["Title"] = Model.Book.Name + " - Detaylar";
}

<style>
    /* --- YENİ EKLENEN BUTON STİLLERİ: btnNotes için --- */

    /* Birincil Stil (Daha Dikkat Çekici) */
    .btn-notes-primary {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8; /* Krem beyaz metin */
        padding: 10px 25px;
        border-radius: 25px;
        font-weight: 500;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.4);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .btn-notes-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(107, 85, 65, 0.6);
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
            color: #f5f0e8;
        }

    /* İkincil Stil (Daha Sade, Çizgili) */
    .btn-notes-secondary {
        background: transparent;
        border: 2px solid #a0785a;
        color: #8b6f47;
        padding: 10px 25px;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .btn-notes-secondary:hover {
            background: #8b6f47;
            color: #f5f0e8;
            transform: translateY(-0.5px);
            box-shadow: 0 3px 10px rgba(107, 85, 65, 0.3);
        }

    .btn-secondary-mini {
        background: transparent;
        border: 2px solid #8b6f47;
        color: #8b6f47;
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        text-transform: none;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        text-decoration: none;
        margin-top: 8px;
    }

        .btn-secondary-mini:hover {
            background: #8b6f47;
            color: #f5f0e8;
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(107, 85, 65, 0.3);
        }

    body {
        background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
        font-family: 'Georgia', serif;
    }

    .details-container {
        padding: 60px 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .breadcrumb-wrapper {
        background: rgba(255, 255, 255, 0.5);
        padding: 15px 25px;
        border-radius: 15px;
        margin-bottom: 40px;
        backdrop-filter: blur(10px);
        box-shadow: 0 2px 10px rgba(107, 85, 65, 0.1);
    }

    .breadcrumb {
        background: none;
        margin: 0;
        padding: 0;
        font-family: 'Georgia', serif;
    }

    .breadcrumb-item a {
        color: #8b6f47;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .breadcrumb-item a:hover {
            color: #6b5541;
        }

    .breadcrumb-item.active {
        color: #4a3f35;
        font-weight: 600;
    }

    .book-details-card {
        background: #fff9f0;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(107, 85, 65, 0.2);
        position: relative;
    }

        .book-details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #8b6f47, #6b5541);
        }

    .image-section {
        padding: 40px;
        background: linear-gradient(135deg, #f5ede0 0%, #e8dcc8 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .book-image-wrapper {
        position: relative;
        max-width: 450px;
        width: 100%;
    }

    .book-image {
        width: 100%;
        height: auto;
        border-radius: 15px;
        box-shadow: 0 15px 50px rgba(107, 85, 65, 0.4);
        transition: transform 0.4s ease;
    }

        .book-image:hover {
            transform: scale(1.05);
        }

    .stock-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, #48bb78, #38a169);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1rem;
        box-shadow: 0 4px 15px rgba(72, 187, 120, 0.4);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .stock-badge.out-of-stock {
            background: linear-gradient(135deg, #f56565, #e53e3e);
            box-shadow: 0 4px 15px rgba(245, 101, 101, 0.4);
        }

    .info-section {
        padding: 50px 40px;
    }

    .book-title {
        font-size: 2.8rem;
        font-weight: 800;
        color: #4a3f35;
        margin-bottom: 15px;
        line-height: 1.3;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .book-author {
        font-size: 1.5rem;
        color: #8b6f47;
        font-style: italic;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .rating {
        font-size: 1.5rem;
        color: #8b6f47;
        font-style: italic;
        margin-bottom: 25px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .author-icon {
        font-size: 1.8rem;
    }

    .book-category-badge {
        display: inline-block;
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 10px 25px;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.3);
    }

    .price-section {
        background: linear-gradient(135deg, #ffd782 0%, #f5c35a 100%);
        padding: 25px 30px;
        border-radius: 20px;
        margin: 30px 0;
        box-shadow: 0 8px 25px rgba(255, 215, 130, 0.4);
    }

    .price-label {
        font-size: 1.1rem;
        color: #6b5541;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .price-value {
        font-size: 3rem;
        font-weight: 800;
        color: #4a3f35;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .description-section {
        margin: 30px 0;
        padding: 25px;
        background: rgba(245, 237, 224, 0.5);
        border-radius: 15px;
        border-left: 5px solid #8b6f47;
    }

    .description-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #4a3f35;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .description-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #4a3f35;
        text-align: justify;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin: 30px 0;
    }

    .info-item {
        background: rgba(255, 255, 255, 0.7);
        padding: 20px;
        border-radius: 15px;
        border: 2px solid rgba(139, 111, 71, 0.2);
        transition: all 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(107, 85, 65, 0.2);
            border-color: #8b6f47;
        }

    .info-label {
        font-size: 0.9rem;
        color: #8b6f47;
        font-weight: 600;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .info-value {
        font-size: 1.3rem;
        color: #4a3f35;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 40px;
        flex-wrap: wrap;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 18px 40px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 6px 20px rgba(107, 85, 65, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

        .btn-primary-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(107, 85, 65, 0.5);
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
            color: #f5f0e8;
        }

    .btn-secondary-custom {
        background: transparent;
        border: 3px solid #8b6f47;
        color: #8b6f47;
        padding: 15px 35px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

        .btn-secondary-custom:hover {
            background: #8b6f47;
            color: #f5f0e8;
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(107, 85, 65, 0.3);
        }

    .decorative-divider {
        height: 3px;
        background: linear-gradient(90deg, transparent, #8b6f47, transparent);
        margin: 40px 0;
    }

    /* --- ANA SAYFADAN ALINAN KART STİLLERİ --- */
    .books-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 25px;
        margin-top: 30px;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
    }

    .book-card {
        transition: all 0.4s ease;
        border: none;
        border-radius: 15px;
        overflow: visible;
        background: #fff9f0;
        height: 100%;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.15);
        position: relative;
    }

        .book-card::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 15px;
            background: radial-gradient(circle, rgba(255, 215, 130, 0.6) 0%, rgba(205, 164, 94, 0.4) 30%, rgba(139, 111, 71, 0.2) 60%, transparent 100%);
            transform: translate(-50%, -50%);
            transition: all 0.6s ease;
            z-index: -1;
            opacity: 0;
        }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 19px 19px rgba(107, 85, 65, 0.1);
        }

            .book-card:hover::before {
                width: 110%;
                height: 110%;
                opacity: 1;
            }

        .book-card .card-img-top {
            width: 100%;
            height: 400px;
            object-fit: cover;
            transition: all 0.4s ease;
            border-bottom: 3px solid #8b6f47;
            border-radius: 15px 15px 0 0;
        }

        .book-card .card-body {
            padding: 20px;
            background: linear-gradient(to bottom, #fff9f0 0%, #f5ede0 100%);
            border-radius: 0 0 15px 15px;
            display: flex;
            flex-direction: column;
        }

    .card-title {
        color: #4a3f35;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 10px;
        min-height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .author-name {
        color: #8b6f47;
        font-size: 1rem;
        font-style: italic;
        margin-bottom: 15px;
        font-weight: 500;
        text-align: center;
    }

    .details-btn {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        box-shadow: 0 4px 12px rgba(107, 85, 65, 0.3);
        text-decoration: none;
        display: inline-block;
        text-align: center;
        margin-top: auto;
    }

        .details-btn:hover {
            transform: scale(1.01);
            color: #f5f0e8;
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
        }

    /* --- RESPONSIVE DÜZENLEME BAŞLANGICI --- */

    @@media (max-width: 768px) {
        .details-container

    {
        padding: 30px 0;
    }

    .breadcrumb-wrapper {
        padding: 10px 15px;
        margin-bottom: 25px;
    }

    .book-title {
        font-size: 2rem;
        line-height: 1.2;
    }

    /* --- BURASI DEĞİŞTİRİLDİ: Yazar, Kategori, Tarih, Sayfa yan yana (2'li) --- */
    /* Önceden col-6 olanların mobilde de %50 genişlikte kalmasını sağlıyoruz */
    .row .book-author.col-6 {
        flex: 0 0 50%;
        max-width: 50%;
        font-size: 0.95rem; /* Fontu mobil için hafif küçülttük */
        margin-bottom: 15px;
    }

    /* --- Sadece Puan (col-7) ve Buton (col-5) için düzenleme --- */
    /* Puan kısmını ve Butonu alt alta (veya sıkışmadan) gösterir */
