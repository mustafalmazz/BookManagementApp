@using BookManagementApp.Areas.Admin.Models
@model BookDetailsViewModel
@{
    ViewData["Title"] = Model.Book.Name + " - Detaylar";
}

<style>
    /* --- GENEL AYARLAR --- */
    body {
        background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
        font-family: 'Georgia', serif;
        color: #4a3f35;
    }

    /* --- BUTON STİLLERİ (Kompakt Hale Getirildi - ÜST KISIM İÇİN) --- */
    .btn-notes-primary {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 8px 20px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 10px rgba(107, 85, 65, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .btn-notes-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(107, 85, 65, 0.5);
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
            color: #f5f0e8;
        }

    .btn-notes-secondary {
        background: transparent;
        border: 2px solid #a0785a;
        color: #8b6f47;
        padding: 8px 20px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .btn-notes-secondary:hover {
            background: #8b6f47;
            color: #f5f0e8;
            transform: translateY(-1px);
            box-shadow: 0 3px 10px rgba(107, 85, 65, 0.3);
        }

    .btn-secondary-mini {
        background: transparent;
        border: 1px solid #8b6f47;
        color: #8b6f47;
        padding: 5px 12px;
        border-radius: 15px;
        font-weight: 600;
        font-size: 0.8rem;
        transition: all 0.3s ease;
        text-transform: none;
        letter-spacing: 0.3px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
        text-decoration: none;
        margin-top: 8px;
    }

        .btn-secondary-mini:hover {
            background: #8b6f47;
            color: #f5f0e8;
            transform: translateY(-1px);
        }

    /* --- LAYOUT --- */
    .details-container {
        padding: 20px 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .breadcrumb-wrapper {
        background: rgba(255, 255, 255, 0.6);
        padding: 10px 20px;
        border-radius: 10px;
        margin-bottom: 30px;
        backdrop-filter: blur(5px);
        box-shadow: 0 2px 5px rgba(107, 85, 65, 0.05);
    }

    .breadcrumb {
        margin: 0;
        padding: 0;
        font-family: 'Georgia', serif;
        font-size: 0.95rem;
    }

    .breadcrumb-item a {
        color: #8b6f47;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .breadcrumb-item a:hover {
            color: #6b5541;
        }

    .breadcrumb-item.active {
        color: #4a3f35;
        font-weight: 600;
    }

    /* --- ANA KART YAPISI --- */
    .book-details-card {
        background: #fff9f0;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(107, 85, 65, 0.15);
        position: relative;
    }

        .book-details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #8b6f47, #6b5541);
        }

    /* --- SOL TARAF (RESİM) --- */
    .image-section {
        padding: 30px;
        background: linear-gradient(135deg, #f5ede0 0%, #e8dcc8 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .book-image-wrapper {
        position: relative;
        max-width: 380px;
        width: 100%;
    }

    .book-image {
        width: 100%;
        height: auto;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(107, 85, 65, 0.3);
        transition: transform 0.4s ease;
    }

        .book-image:hover {
            transform: scale(1.03);
        }

    /* --- SAĞ TARAF (BİLGİLER) --- */
    .info-section {
        padding: 30px 35px;
    }

    .book-title {
        font-size: 2.2rem;
        font-weight: 800;
        color: #4a3f35;
        margin-bottom: 10px;
        line-height: 1.2;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.05);
    }

    .book-author {
        font-size: 1.2rem;
        color: #8b6f47;
        font-style: italic;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .rating {
        font-size: 1.1rem;
        color: #8b6f47;
        font-style: italic;
        margin-bottom: 20px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    /* Açıklama Alanı */
    .description-section {
        margin: 20px 0;
        padding: 20px;
        background: rgba(245, 237, 224, 0.5);
        border-radius: 12px;
        border-left: 4px solid #8b6f47;
    }

    .description-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #4a3f35;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .description-text {
        font-size: 1rem;
        line-height: 1.6;
        color: #4a3f35;
        text-align: justify;
    }

    .decorative-divider {
        height: 2px;
        background: linear-gradient(90deg, transparent, #8b6f47, transparent);
        margin: 30px 0;
    }

    /* --- BENZER KİTAPLAR BÖLÜMÜ --- */
    .related-books-section {
        margin-top: 50px;
    }

    .section-title {
        text-align: center;
        color: #4a3f35;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
        letter-spacing: 1px;
    }

    .books-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
    }

    .book-card {
        background: #fff9f0;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(107, 85, 65, 0.15);
        transition: all 0.4s ease;
        position: relative;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .book-card::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 15px;
            background: radial-gradient(circle, rgba(255, 215, 130, 0.6) 0%, rgba(205, 164, 94, 0.4) 30%, rgba(139, 111, 71, 0.2) 60%, transparent 100%);
            transform: translate(-50%, -50%);
            transition: all 0.6s ease;
            z-index: 0;
            opacity: 0;
        }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(107, 85, 65, 0.25);
        }

            .book-card:hover::before {
                width: 110%;
                height: 110%;
                opacity: 1;
            }

    .card-img-wrapper {
        position: relative;
        width: 100%;
        height: 320px;
        overflow: hidden;
        background: linear-gradient(135deg, #f5ede0 0%, #e8dcc8 100%);
    }

    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
        position: relative;
        z-index: 1;
    }

    .book-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-body {
        padding: 20px;
        background: linear-gradient(to bottom, #fff9f0 0%, #f5ede0 100%);
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        position: relative;
        z-index: 1;
    }

    .card-title {
        color: #4a3f35;
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 10px;
        min-height: 50px;
        text-align: center;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.4;
    }

    .author-name {
        color: #8b6f47;
        font-size: 0.95rem;
        font-style: italic;
        margin-bottom: 15px;
        font-weight: 500;
        text-align: center;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .details-btn {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 10px 24px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.8rem;
        box-shadow: 0 4px 12px rgba(107, 85, 65, 0.3);
        text-decoration: none;
        display: inline-block;
        text-align: center;
        margin-top: auto;
    }

        .details-btn:hover {
            transform: translateY(-2px);
            color: #f5f0e8;
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
            box-shadow: 0 6px 18px rgba(107, 85, 65, 0.4);
        }

    .no-related-books {
        text-align: center;
        margin-top: 40px;
        padding: 40px 20px;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 15px;
        color: #8b6f47;
        font-size: 1.1rem;
        font-style: italic;
    }

    /* --- RESPONSIVE KISMI --- */
    @@media (max-width: 992px) {
        .books-grid

    {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
    }

    }

    @@media (max-width: 768px) {
        /* Container ve Genel Ayarlar */
        .details-container

    {
        padding: 15px 0;
    }

    .container {
        padding-left: 15px;
        padding-right: 15px;
    }

    /* Breadcrumb */
    .breadcrumb-wrapper {
        padding: 8px 15px;
        margin-bottom: 20px;
    }

    .breadcrumb {
        font-size: 0.85rem;
    }

    /* Kitap Detay Kartı */
    .book-details-card {
        border-radius: 15px;
    }

    /* Resim Bölümü - Mobilde Üstte */
    .image-section {
        padding: 25px 20px;
    }

    .book-image-wrapper {
        max-width: 280px;
    }

    .book-image {
        border-radius: 10px;
    }

    /* Bilgi Bölümü */
    .info-section {
        padding: 25px 20px;
    }

    .book-title {
        font-size: 1.6rem;
        margin-bottom: 15px;
        text-align: center;
    }

    /* Açıklama Bölümü */
    .description-section {
        margin: 15px 0;
        padding: 15px;
        border-radius: 10px;
    }

    .description-title {
        font-size: 1.1rem;
        margin-bottom: 8px;
    }

    .description-text {
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .btn-secondary-mini {
        font-size: 0.75rem;
        padding: 5px 10px;
    }

    .decorative-divider {
        margin: 20px 0;
    }

    /* Kitap Bilgileri - Mobilde Daha Kompakt */
    .book-author {
        font-size: 1rem;
        margin-bottom: 10px;
        gap: 5px;
        word-break: break-word;
    }

        .book-author i {
            font-size: 1rem;
            flex-shrink: 0;
        }

    .rating {
        font-size: 0.95rem;
        margin-bottom: 12px;
        gap: 6px;
    }

        /* Rating Yıldızları - Mobilde Daha Küçük */
        .rating i {
            font-size: 16px !important;
        }

    /* Notlar Butonu - Mobilde Full Width */
    .btn-notes-primary {
        width: 100%;
        justify-content: center;
        padding: 10px 16px;
        font-size: 0.8rem;
        margin-top: 10px;
    }

    /* Row Düzenleme - Mobilde Stack */
    .info-section .row {
        margin-bottom: 8px;
    }

        .info-section .row > div {
            margin-bottom: 8px;
        }

    /* Benzer Kitaplar Bölümü */
    .related-books-section {
        margin-top: 35px;
    }

    .section-title {
        font-size: 1.4rem;
        margin-bottom: 8px;
    }

    /* Kitaplar Grid - Mobilde 2'li */
    .books-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
        margin-top: 20px;
    }

    /* Kitap Kartları - Mobil Optimizasyonu */
    .book-card {
        border-radius: 12px;
    }

    .card-img-wrapper {
        height: 200px;
    }

    .card-body {
        padding: 12px;
    }

    .card-title {
        font-size: 0.85rem;
        min-height: 38px;
        margin-bottom: 6px;
        line-height: 1.3;
    }

    .author-name {
        font-size: 0.75rem;
        margin-bottom: 10px;
    }

        .author-name i {
            font-size: 0.7rem;
        }

    .details-btn {
        padding: 8px 12px;
        font-size: 0.65rem;
        border-radius: 20px;
        letter-spacing: 0.3px;
    }

    /* No Related Books */
    .no-related-books {
        margin-top: 25px;
        padding: 30px 15px;
        font-size: 0.95rem;
    }

        .no-related-books i {
            font-size: 1.5rem !important;
        }

    /* Hover Efektlerini Mobilde Kaldır */
    .book-card:hover {
        transform: none;
    }

    .book-image:hover {
        transform: none;
    }

    }

    @@media (max-width: 576px) {
        /* Ekstra Küçük Ekranlar İçin */
        .book-title

    {
        font-size: 1.4rem;
    }

    .book-author {
        font-size: 1rem;
        gap: 3px;
    }

        .book-author i {
            font-size: 1rem;
        }

    .description-title {
        font-size: 1rem;
    }

    .description-text {
        font-size: 0.85rem;
    }

    /* Kitap Kartları Daha Kompakt */
    .card-img-wrapper {
        height: 180px;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 0.8rem;
        min-height: 36px;
    }

    .author-name {
        font-size: 0.7rem;
        margin-bottom: 8px;
    }

    .details-btn {
        padding: 7px 10px;
        font-size: 0.6rem;
    }

    .books-grid {
            /* Değişti: 280px yerine 220px yapıldı. Artık satıra daha çok kitap sığıyor */
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            gap: 10px;
    }

    }

    @@media (max-width: 480px) {
        /* Çok Küçük Ekranlar */
        .image-section

    {
        padding: 20px 15px;
    }

    .book-image-wrapper {
        max-width: 250px;
    }

    .info-section {
        padding: 20px 15px;
    }

    .book-title {
        font-size: 1.3rem;
    }

    .section-title {
        font-size: 1.2rem;
    }

    .card-img-wrapper {
        height: 170px;
    }

    }

    /* Tablet Yatay - Orta Boyut Ayarları */
    @@media (min-width: 769px) and (max-width: 991px) {
        .books-grid

    {
        grid-template-columns: repeat(3, 1fr);
        gap: 18px;
    }

    .card-img-wrapper {
        height: 260px;
    }

    }
</style>

<div class="details-container">
    <div class="container">
        <nav class="breadcrumb-wrapper" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/Home/Index">Kitaplar</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Book?.Name</li>
            </ol>
        </nav>

        <div class="book-details-card">
            <div class="row g-0">
                <div class="col-lg-5 image-section">
                    <div class="book-image-wrapper">
                        <img src="@(string.IsNullOrEmpty(Model.Book.Image) ? "/images/ResimBulunamadi.png" : Model.Book.Image)"
                             class="book-image"
                             alt="@Model.Book.Name">
                    </div>
                </div>

                <div class="col-lg-7 info-section">
                    <h1 class="book-title">@Model.Book.Name</h1>
                    @if (!string.IsNullOrEmpty(Model.Book.Description))
                    {
                        var shortDesc = Model.Book.Description.Length > 260
                        ? Model.Book.Description.Substring(0, 260) + "..."
                        : Model.Book.Description;
                        <div class="description-section">
                            <h3 class="description-title">
                                <i class="bi bi-book-half"></i>
                                Kitap Özeti
                            </h3>

                            <p id="shortDesc" class="description-text">@shortDesc</p>

                            @if (Model.Book.Description.Length > 260)
                            {
                                <p id="fullDesc" class="description-text" style="display:none;">@Model.Book.Description</p>
                                <a href="javascript:void(0)" id="toggleDesc" class="btn-secondary-mini">
                                    Devamını Oku <i class="fa-solid fa-arrow-right"></i>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="description-section">
                            <h3 class="description-title">
                                <i class="bi bi-book-half"></i>
                                Kitap Özeti
                            </h3>
                            <p class="description-text text-muted"><br /><em>Henüz bu kitaba ait özet eklenmedi.</em><br /><br /></p>
                        </div>
                    }

                    <div class="decorative-divider"></div>

                    <div class="row">
                        <div class="book-author col-md-6 col-6">
                            <i class="fa-solid fa-feather"></i>
                            @Model.Book.Author
                        </div>
                        <div class="book-author col-md-6 col-6">
                            <i class="fa-solid fa-layer-group"></i> @Model.Book.Category.CategoryName
                        </div>
                    </div>

                    <div class="row">
                        <div class="book-author col-md-6 col-6">
                            <i class="fa-solid fa-calendar"></i>@Model.Book.CreateDate.ToString("dd MMMM yyyy")
                        </div>
                        <div class="book-author col-md-6 col-6">
                            <i class="fa-solid fa-scroll"></i>@Model.Book.TotalPages Sayfa
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-7 col-12">
                            <text class="rating">Puanım/ </text>
                            @if (Model.Book.Rate.HasValue)
                            {
                                double rate = Convert.ToDouble(Model.Book.Rate.Value);
                                int fullStars = (int)Math.Floor(rate);
                                bool hasHalfStar = (rate - fullStars) >= 0.5;

                                @for (int i = 0; i < fullStars; i++)
                                {
                                    <i style="font-size:20px;" class="fa-solid fa-star text-warning"></i>
                                }

                                @if (hasHalfStar)
                                {
                                    <i style="font-size:20px;" class="fa-solid fa-star-half-stroke text-warning"></i>
                                }

                                @for (int i = 0; i < (5 - fullStars - (hasHalfStar ? 1 : 0)); i++)
                                {
                                    <i style="font-size:20px;" class="fa-regular fa-star text-warning"></i>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Henüz Puanlanmadı</span>
                            }
                        </div>
                        <div class="col-md-5 col-12">
                            <a href="/home/notes/@Model.Book?.Id" class="btn-notes-primary">Aldığım Notlar    <i class="fa-solid fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.RelatedBooks != null && Model.RelatedBooks.Any())
        {
            <div class="related-books-section">
                <h2 class="section-title">Aynı Kategoriden Kitaplar</h2>
                <div class="decorative-divider"></div>

                <div class="books-grid">
                    @foreach (var book in Model.RelatedBooks)
                    {
                        <div class="book-card">
                            <div class="card-img-wrapper">
                                <img src="@(string.IsNullOrEmpty(book.Image) ? "/images/ResimBulunamadi.png" : book.Image)"
                                     class="card-img-top"
                                     alt="@book.Name"
                                     loading="lazy">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title" title="@book.Name">
                                    @book.Name
                                </h5>

                                <p class="author-name" title="@book.Author">
                                    <i class="fa-solid fa-feather"></i> @book.Author
                                </p>

                                <div class="mt-auto text-center">
                                    <a href="/Home/Details/@book.Id" class="details-btn">
                                        Detayları Gör
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="no-related-books">
                <i class="fa-solid fa-book-open" style="font-size: 2rem; margin-bottom: 10px; display: block;"></i>
                Bu kategoride başka kitap bulunmamaktadır.
            </div>
        }

    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("toggleDesc");
        if (toggleBtn) {
            toggleBtn.addEventListener("click", function () {
                const shortDesc = document.getElementById("shortDesc");
                const fullDesc = document.getElementById("fullDesc");

                if (fullDesc.style.display === "none") {
                    fullDesc.style.display = "block";
                    shortDesc.style.display = "none";
                    toggleBtn.innerHTML = 'Küçült <i class="fa-solid fa-arrow-up"></i>';
                } else {
                    fullDesc.style.display = "none";
                    shortDesc.style.display = "block";
                    toggleBtn.innerHTML = 'Devamını Oku <i class="fa-solid fa-arrow-right"></i>';
                }
            });
        }
    });
</script>
