@model IEnumerable<Book>

@{
    ViewData["Title"] = "Home Page";
    // Veri var mı kontrolü
    bool hasBooks = Model != null && Model.Any();
}

<style>
    body {
        background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
        font-family: 'Georgia', serif;
    }

    /* --- MEVCUT HEADER STİLLERİ --- */
    .page-header {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 30px 0 0px;
        margin-bottom: 50px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.05" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,138.7C960,139,1056,117,1152,106.7C1248,96,1344,96,1392,96L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
            background-size: cover;
        }

        .page-header h1 {
            font-size: 3.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            margin-bottom: 10px;
            letter-spacing: 2px;
            position: relative;
        }

    /* --- YENİ EKLENEN BOŞ DURUM (EMPTY STATE) STİLLERİ --- */
    .empty-state-wrapper {
        text-align: center;
        padding: 60px 20px;
        animation: fadeIn 1s ease;
    }

    .empty-card {
        background: rgba(255, 249, 240, 0.6);
        border: 4px dashed #e8dcc8;
        border-radius: 40px;
        padding: 50px;
        max-width: 800px;
        margin: 0 auto;
        position: relative;
    }

    .empty-icon {
        font-size: 6rem;
        color: #d4c5b0;
        margin-bottom: 30px;
        display: inline-block;
    }

    .empty-title {
        color: #8b6f47;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .empty-text {
        color: #6b5541;
        font-size: 1.2rem;
        margin-bottom: 40px;
        font-style: italic;
        line-height: 1.6;
    }

    .add-book-btn-lg {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 20px 50px;
        border-radius: 50px;
        font-size: 1.3rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 15px;
        box-shadow: 0 10px 25px rgba(107, 85, 65, 0.3);
        border: 2px solid transparent;
    }

        .add-book-btn-lg:hover {
            transition: 0.5s;
            transform: translateY(-1px);
            box-shadow: 0 15px 35px rgba(107, 85, 65, 0.4);
            background: #fff;
            color: #8b6f47;
            border-color: #8b6f47;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* --- MEVCUT LİSTELEME STİLLERİ (Filtre, Grid vb.) --- */
    .container-custom {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        gap: 30px;
    }

    .filter-sidebar {
        width: 280px;
        flex-shrink: 0;
        position: sticky;
        top: 20px;
        height: fit-content;
    }

    .filter-card {
        background: #fff9f0;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.15);
        margin-bottom: 20px;
    }

    .filter-title {
        color: #4a3f35;
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #8b6f47;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .filter-section {
        margin-bottom: 25px;
    }

    .filter-label {
        color: #6b5541;
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 12px;
        display: block;
    }

    .filter-option {
        display: flex;
        align-items: center;
        padding: 10px;
        margin-bottom: 8px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .filter-option:hover {
            background: rgba(139, 111, 71, 0.1);
        }

        .filter-option input[type="radio"] {
            margin-right: 10px;
            accent-color: #8b6f47;
            cursor: pointer;
        }

        .filter-option label {
            cursor: pointer;
            color: #4a3f35;
            font-size: 0.95rem;
            margin: 0;
        }

    .clear-filters-btn {
        width: 100%;
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 12px;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        margin-top: 20px;
    }

        .clear-filters-btn:hover {
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(107, 85, 65, 0.3);
        }

    .books-container {
        flex: 1;
        min-width: 0;
    }

    .books-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 25px;
    }

    .book-card {
        transition: all 0.4s ease;
        border: none;
        border-radius: 15px;
        overflow: visible;
        background: #fff9f0;
        height: 100%;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.15);
        position: relative;
    }

        .book-card::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 15px;
            background: radial-gradient(circle, rgba(255, 215, 130, 0.6) 0%, rgba(205, 164, 94, 0.4) 30%, rgba(139, 111, 71, 0.2) 60%, transparent 100%);
            transform: translate(-50%, -50%);
            transition: all 0.6s ease;
            z-index: -1;
            opacity: 0;
        }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 19px 19px rgba(107, 85, 65, 0.1);
        }

            .book-card:hover::before {
                width: 110%;
                height: 110%;
                opacity: 1;
            }

        .book-card .card-img-top {
            width: 100%;
            height: 400px;
            object-fit: cover;
            transition: all 0.4s ease;
            border-bottom: 3px solid #8b6f47;
            border-radius: 15px 15px 0 0;
        }

        .book-card .card-body {
            padding: 20px;
            background: linear-gradient(to bottom, #fff9f0 0%, #f5ede0 100%);
            border-radius: 0 0 15px 15px;
            display: flex;
            flex-direction: column;
        }

    .card-title {
        color: #4a3f35;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 10px;
        min-height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .author-name {
        color: #8b6f47;
        font-size: 1rem;
        font-style: italic;
        margin-bottom: 15px;
        font-weight: 500;
        text-align: center;
    }

    .details-btn {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        box-shadow: 0 4px 12px rgba(107, 85, 65, 0.3);
        text-decoration: none;
        display: inline-block;
        text-align: center;
        margin-top: auto;
    }

        .details-btn:hover {
            transform: scale(1.05);
            color: #f5f0e8;
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
        }

    /* Responsive */
    @@media (max-width: 1024px) {
        .filter-sidebar {
            width: 240px;
        }
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 2.5rem;
        }

        .container-custom {
            flex-direction: column;
        }

        .filter-sidebar {
            width: 100%;
            position: relative;
            top: 0;
        }

        .books-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        }
        /* Empty State Responsive */
        .empty-card {
            padding: 30px;
        }

        .empty-title {
            font-size: 2rem;
        }

        .add-book-btn-lg {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="page-header">
    <div class="container text-center">
        <h1>
            Kitap Koleksiyonum
            <br />
            @if (hasBooks)
            {
                <small style="font-size:1.2rem; font-weight:400; color:#f5f0e8;">
                    Toplam @Model.Count() kitap bulunmaktadır!
                </small>
            }
            else
            {
                <small style="font-size:1.2rem; font-weight:400; color:#f5f0e8; font-style:italic;">
                    Raflarımız henüz sessiz...
                </small>
            }
        </h1>
    </div>
</div>

@if (!hasBooks)
{
    <div class="container empty-state-wrapper">
        <div class="empty-card">
            <div class="empty-icon">
                <i class="fa-solid fa-book-open-reader"></i>
            </div>

            <h2 class="empty-title">Kütüphaneniz Henüz Boş</h2>

            <p class="empty-text">
                Henüz koleksiyonunuza eklenmiş bir eser bulunmuyor.<br>
                İlk kitabı ekleyerek bu büyülü yolculuğu başlatın ve rafları bilgiyle doldurun.
            </p>

            <a href="/Admin/Books/Create" class="add-book-btn-lg">
                <i class="fa-solid fa-plus"></i> Şimdi Kitap Ekle
            </a>
        </div>
    </div>
}
else
{
    <div class="container-custom">
        <aside class="filter-sidebar">
            <div class="filter-card">
                <h3 class="filter-title">
                    <i class="fa-solid fa-filter"></i> Filtrele
                </h3>

                <div class="filter-section">
                    <label class="filter-label">Sayfa Sayısı</label>
                    <div class="filter-option">
                        <input type="radio" id="all" name="pageCount" value="all" checked>
                        <label for="all">Tümü</label>
                    </div>
                    <div class="filter-option">
                        <input type="radio" id="short" name="pageCount" value="0-200">
                        <label for="short">0 - 200 sayfa</label>
                    </div>
                    <div class="filter-option">
                        <input type="radio" id="medium" name="pageCount" value="201-400">
                        <label for="medium">201 - 400 sayfa</label>
                    </div>
                    <div class="filter-option">
                        <input type="radio" id="long" name="pageCount" value="401-600">
                        <label for="long">401 - 600 sayfa</label>
                    </div>
                    <div class="filter-option">
                        <input type="radio" id="verylong" name="pageCount" value="601+">
                        <label for="verylong">601+ sayfa</label>
                    </div>
                </div>

                <div class="filter-section">
                    <label class="filter-label">Sıralama</label>
                    <div class="filter-option">
                        <input type="radio" id="asc" name="sortOrder" value="asc" checked>
                        <label for="asc">Artan </label>
                    </div>
                    <div class="filter-option">
                        <input type="radio" id="desc" name="sortOrder" value="desc">
                        <label for="desc">Azalan </label>
                    </div>
                </div>

                <button class="clear-filters-btn" onclick="clearFilters()">
                    Filtreleri Temizle
                </button>
            </div>
        </aside>

        <main class="books-container">
            <div class="books-grid" id="booksGrid">
                @foreach (var book in Model)
                {
                    <div class="book-card" data-pages="@book.TotalPages">
                        <img src="@(string.IsNullOrEmpty(book.Image) ? "/images/ResimBulunamadi.png" : book.Image)"
                             class="card-img-top"
                             alt="@book.Name">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">@book.Name</h5>
                            <p class="author-name text-center">@book.Author</p>
                            <div class="mt-auto text-center">
                                <a href="/Home/Details/@book.Id" class="btn details-btn">
                                    Detayları Gör
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </main>
    </div>
}

@section Scripts {
    @if (hasBooks)
    {
        <script>
            function filterAndSortBooks() {
                const pageCountFilter = document.querySelector('input[name="pageCount"]:checked').value;
                const sortOrder = document.querySelector('input[name="sortOrder"]:checked').value;
                const booksGrid = document.getElementById('booksGrid');
                // booksGrid null olabilir kontrolü
                if (!booksGrid) return;

                const books = Array.from(booksGrid.children);

                // Filtreleme
                books.forEach(book => {
                    const pages = parseInt(book.dataset.pages);
                    let show = true;

                    if (pageCountFilter !== 'all') {
                        if (pageCountFilter === '0-200') show = pages >= 0 && pages <= 200;
                        else if (pageCountFilter === '201-400') show = pages >= 201 && pages <= 400;
                        else if (pageCountFilter === '401-600') show = pages >= 401 && pages <= 600;
                        else if (pageCountFilter === '601+') show = pages >= 601;
                    }

                    book.style.display = show ? 'block' : 'none';
                });

                // Sıralama
                const visibleBooks = books.filter(book => book.style.display !== 'none');
                visibleBooks.sort((a, b) => {
                    const pagesA = parseInt(a.dataset.pages);
                    const pagesB = parseInt(b.dataset.pages);
                    return sortOrder === 'asc' ? pagesA - pagesB : pagesB - pagesA;
                });

                // Yeniden düzenleme
                visibleBooks.forEach(book => booksGrid.appendChild(book));
            }

            function clearFilters() {
                document.getElementById('all').checked = true;
                document.getElementById('asc').checked = true;
                filterAndSortBooks();
            }

            // Event listeners
            document.querySelectorAll('input[name="pageCount"], input[name="sortOrder"]').forEach(input => {
                input.addEventListener('change', filterAndSortBooks);
            });
        </script>
    }
}