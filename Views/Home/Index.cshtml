@model IEnumerable<Book>

@{
    ViewData["Title"] = "Home Page";

    var currentSort = ViewData["CurrentSort"] as string;
    var currentPageCount = ViewData["CurrentPageCount"] as string;
    var currentSearch = ViewData["CurrentSearch"] as string;
    var currentPage = ViewData["CurrentPage"] != null ? (int)ViewData["CurrentPage"] : 1;
    var totalPages = ViewData["TotalPages"] != null ? (int)ViewData["TotalPages"] : 1;


    bool isDatabaseEmpty = !Model.Any() && string.IsNullOrEmpty(currentSearch) && string.IsNullOrEmpty(currentPageCount) && string.IsNullOrEmpty(currentSort);
    bool hasBooks = Model != null && Model.Any();
}


<style>
    body {
        background: linear-gradient(135deg, #f5f0e8 0%, #e8dcc8 100%);
        font-family: 'Georgia', serif;
    }

    .page-header {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 30px 0 0px;
        margin-bottom: 50px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.05" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,138.7C960,139,1056,117,1152,106.7C1248,96,1344,96,1392,96L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
            background-size: cover;
        }

        .page-header h1 {
            font-size: 3.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            margin-bottom: 10px;
            letter-spacing: 2px;
            position: relative;
        }

    .empty-state-wrapper {
        text-align: center;
        padding: 60px 20px;
        animation: fadeIn 1s ease;
    }

    .empty-card {
        background: rgba(255, 249, 240, 0.6);
        border: 4px dashed #e8dcc8;
        border-radius: 40px;
        padding: 50px;
        max-width: 800px;
        margin: 0 auto;
        position: relative;
    }

    .empty-icon {
        font-size: 6rem;
        color: #d4c5b0;
        margin-bottom: 30px;
        display: inline-block;
    }

    .empty-title {
        color: #8b6f47;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .empty-text {
        color: #6b5541;
        font-size: 1.2rem;
        margin-bottom: 40px;
        font-style: italic;
        line-height: 1.6;
    }

    .add-book-btn-lg {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 20px 50px;
        border-radius: 50px;
        font-size: 1.3rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 15px;
        box-shadow: 0 10px 25px rgba(107, 85, 65, 0.3);
        border: 2px solid transparent;
    }

        .add-book-btn-lg:hover {
            transition: 0.5s;
            transform: translateY(-1px);
            box-shadow: 0 15px 35px rgba(107, 85, 65, 0.4);
            background: #fff;
            color: #8b6f47;
            border-color: #8b6f47;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .container-custom {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        gap: 10px;
    }

    .filter-sidebar {
        width: 280px;
        flex-shrink: 0;
        position: sticky;
        top: 20px;
        height: fit-content;
    }

    .filter-card {
        background: #fff9f0;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.15);
        margin-bottom: 20px;
    }

    .filter-title {
        color: #4a3f35;
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #8b6f47;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .filter-section {
        margin-bottom: 25px;
    }

    .filter-label {
        color: #6b5541;
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 12px;
        display: block;
    }

    .filter-option {
        display: flex;
        align-items: center;
        padding: 10px;
        margin-bottom: 8px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .filter-option:hover {
            background: rgba(139, 111, 71, 0.1);
        }

        .filter-option input[type="radio"] {
            margin-right: 10px;
            accent-color: #8b6f47;
            cursor: pointer;
        }

        .filter-option label {
            cursor: pointer;
            color: #4a3f35;
            font-size: 0.95rem;
            margin: 0;
            width: 100%; 
        }

    .clear-filters-btn {
        width: 100%;
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 12px;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        margin-top: 20px;
        text-align: center;
        display: block;
        text-decoration: none;
    }

        .clear-filters-btn:hover {
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(107, 85, 65, 0.3);
            color: #fff;
        }

    .books-container {
        flex: 1;
        min-width: 0;
    }

    .books-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 25px;
    }

    .book-card {
        transition: all 0.4s ease;
        border: none;
        border-radius: 15px;
        overflow: visible;
        background: #fff9f0;
        height: 100%;
        box-shadow: 0 4px 15px rgba(107, 85, 65, 0.15);
        position: relative;
    }

        .book-card::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 15px;
            background: radial-gradient(circle, rgba(255, 215, 130, 0.6) 0%, rgba(205, 164, 94, 0.4) 30%, rgba(139, 111, 71, 0.2) 60%, transparent 100%);
            transform: translate(-50%, -50%);
            transition: all 0.6s ease;
            z-index: -1;
            opacity: 0;
        }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 19px 19px rgba(107, 85, 65, 0.1);
        }

            .book-card:hover::before {
                width: 110%;
                height: 110%;
                opacity: 1;
            }

        .book-card .card-img-top {
            width: 100%;
            height: 400px;
            object-fit: cover;
            transition: all 0.4s ease;
            border-bottom: 3px solid #8b6f47;
            border-radius: 15px 15px 0 0;
        }

        .book-card .card-body {
            padding: 20px;
            background: linear-gradient(to bottom, #fff9f0 0%, #f5ede0 100%);
            border-radius: 0 0 15px 15px;
            display: flex;
            flex-direction: column;
        }

    .card-title {
        color: #4a3f35;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 10px;
        min-height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .author-name {
        color: #8b6f47;
        font-size: 1rem;
        font-style: italic;
        margin-bottom: 15px;
        font-weight: 500;
        text-align: center;
    }

    .details-btn {
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        border: none;
        color: #f5f0e8;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        box-shadow: 0 4px 12px rgba(107, 85, 65, 0.3);
        text-decoration: none;
        display: inline-block;
        text-align: center;
        margin-top: auto;
    }

        .details-btn:hover {
            transform: scale(1.01);
            color: #f5f0e8;
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
        }

    .mobile-filter-toggle {
        display: none;
        background: linear-gradient(135deg, #8b6f47 0%, #6b5541 100%);
        color: #f5f0e8;
        padding: 15px 20px;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        margin-bottom: 5px;
        width: 100%;
        text-align: left;
        box-shadow: 0 4px 12px rgba(107, 85, 65, 0.3);
        transition: all 0.3s ease;
    }

        .mobile-filter-toggle:hover {
            background: linear-gradient(135deg, #a0785a 0%, #8b6f47 100%);
        }

        .mobile-filter-toggle i {
            float: right;
            transition: transform 0.3s ease;
        }

        .mobile-filter-toggle.active i {
            transform: rotate(180deg);
        }

    @@media (max-width: 1024px) {
        .filter-sidebar {
            width: 240px;
        }
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.60rem;
        }

        .page-header {
            margin-bottom: 15px !important;
            padding-bottom: 10px;
        }

        .container-custom {
            flex-direction: column;
        }

        .mobile-filter-toggle {
            display: block;
        }

        .filter-sidebar {
            width: 100%;
            position: relative;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.4s ease;
        }

            .filter-sidebar.show {
                max-height: 1200px; 
            }

        .filter-card {
            padding: 15px;
        }

        .filter-title {
            font-size: 1.2rem;
            margin-bottom: 12px;
            padding-bottom: 10px;
        }

        .filter-section {
            margin-bottom: 15px;
        }

        .filter-option {
            padding: 8px;
            margin-bottom: 5px;
        }

        .filter-label {
            margin-bottom: 8px;
        }

        .clear-filters-btn {
            margin-top: 10px;
            padding: 10px;
        }

        .books-grid {
            grid-template-columns: repeat(2, 1fr);
            margin-top: 0;
            gap: 12px;
        }

        .book-card .card-img-top {
            height: 200px;
        }

        .book-card .card-body {
            padding: 8px;
        }

        .card-title {
            font-size: 0.90rem;
            min-height: 35px;
            margin-bottom: 4px;
        }

        .author-name {
            font-size: 0.75rem;
            margin-bottom: 6px;
        }

        .details-btn {
            padding: 8px 15px;
            font-size: 0.60rem;
            letter-spacing: 0.5px;
        }
        .empty-state-wrapper {
            padding: 30px 15px;
        }

        .empty-card {
            padding: 25px 20px;
            border-radius: 30px;
            border-width: 3px;
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }

        .empty-title {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .empty-text {
            font-size: 1rem;
            margin-bottom: 30px;
        }

        .add-book-btn-lg {
            width: 100%;
            justify-content: center;
            padding: 15px 20px;
            font-size: 1.1rem;
        }
    }
</style>

<div class="page-header">
    <div class="container text-center">
        <h1>
            Kitap Koleksiyonum
            <br />
            @if (hasBooks)
            {
                var totalRecords = (int)(ViewData["TotalRecords"] ?? 0);
                <small style="font-size:1.2rem; font-weight:400; color:#f5f0e8;">
                    Toplam @totalRecords kitabınız bulunuyor
                    
                </small>
               
            }
            else if (!isDatabaseEmpty)
            {
                <small style="font-size:1.2rem; font-weight:400; color:#f5f0e8;">
                    Sonuç bulunamadı...
                </small>
            }
            else
            {
                <small style="font-size:1.2rem; font-weight:400; color:#f5f0e8; font-style:italic;">
                    Raflarımız henüz sessiz...
                </small>
            }
        </h1>
    </div>
</div>

@if (isDatabaseEmpty)
{
    <div class="container empty-state-wrapper">
        <div class="empty-card">
            <div class="empty-icon">
                <i class="fa-solid fa-book-open-reader"></i>
            </div>

            <h2 class="empty-title">Kütüphaneniz Henüz Boş</h2>

            <p class="empty-text">
                Henüz koleksiyonunuza eklenmiş bir eser bulunmuyor.<br>
                İlk kitabı ekleyerek bu büyülü yolculuğu başlatın ve rafları bilgiyle doldurun.
            </p>

            <a href="/Admin/Books/Create" class="add-book-btn-lg">
                <i class="fa-solid fa-plus"></i> Şimdi Kitap Ekle
            </a>
        </div>
    </div>
}
else
{
    
    <form method="get" asp-action="Index">
        <div class="container-custom">

            <button type="button" class="mobile-filter-toggle" onclick="toggleMobileFilters()">
                Filtrele
                <i class="fa-solid fa-chevron-down"></i>
            </button>

            <aside class="filter-sidebar" id="filterSidebar">
                <div class="filter-card">
                    <h3 class="filter-title">
                        <i class="fa-solid fa-filter"></i> Filtrele
                    </h3>

                    <div class="filter-section">
                        <label class="filter-label">Sayfa Sayısı</label>
                        <div class="filter-option">
                            <input type="radio" id="all" name="pageCount" value="" @(string.IsNullOrEmpty(currentPageCount) ? "checked" : "") onchange="this.form.submit()">
                            <label for="all">Tümü</label>
                        </div>
                        <div class="filter-option">
                            <input type="radio" id="short" name="pageCount" value="0-200" @(currentPageCount == "0-200" ? "checked" : "") onchange="this.form.submit()">
                            <label for="short">0 - 200 sayfa</label>
                        </div>
                        <div class="filter-option">
                            <input type="radio" id="medium" name="pageCount" value="201-400" @(currentPageCount == "201-400" ? "checked" : "") onchange="this.form.submit()">
                            <label for="medium">201 - 400 sayfa</label>
                        </div>
                        <div class="filter-option">
                            <input type="radio" id="long" name="pageCount" value="401-600" @(currentPageCount == "401-600" ? "checked" : "") onchange="this.form.submit()">
                            <label for="long">401 - 600 sayfa</label>
                        </div>
                        <div class="filter-option">
                            <input type="radio" id="verylong" name="pageCount" value="601+" @(currentPageCount == "601+" ? "checked" : "") onchange="this.form.submit()">
                            <label for="verylong">601+ sayfa</label>
                        </div>
                    </div>

                    <div class="filter-section">
                        <label class="filter-label">Sıralama</label>
                        <div class="filter-option">
                            <input type="radio" id="date" name="sortOrder" value="" @(string.IsNullOrEmpty(currentSort) ? "checked" : "") onchange="this.form.submit()">
                            <label for="date">En Yeni</label>
                        </div>
                        <div class="filter-option">
                            <input type="radio" id="asc" name="sortOrder" value="asc" @(currentSort == "asc" ? "checked" : "") onchange="this.form.submit()">
                            <label for="asc">Artan (A-Z)</label>
                        </div>
                        <div class="filter-option">
                            <input type="radio" id="desc" name="sortOrder" value="desc" @(currentSort == "desc" ? "checked" : "") onchange="this.form.submit()">
                            <label for="desc">Azalan (Z-A)</label>
                        </div>
                    </div>

                    <a href="/Home/Index" class="clear-filters-btn">
                        Filtreleri Temizle
                    </a>
                </div>
            </aside>

            <main class="books-container">
                <div class="books-grid" id="booksGrid">
                    @if (hasBooks)
                    {
                        @foreach (var book in Model)
                        {
                            <div class="book-card">
                                <img src="@(string.IsNullOrEmpty(book.Image) ? "/images/ResimBulunamadi.png" : book.Image)"
                                     class="card-img-top"
                                     alt="@book.Name">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-center">@book.Name</h5>
                                    <p class="author-name text-center"><i class="fa-solid fa-feather"></i>@book.Author</p>
                                    <div class="mt-auto text-center">
                                        <a href="/Home/Details/@book.Id" class="btn details-btn">
                                            Detayları Gör
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center" style="grid-column: 1 / -1; padding: 50px;">
                            <i class="fa-solid fa-magnifying-glass" style="font-size: 3rem; color: #d4c5b0; margin-bottom: 20px;"></i>
                            <h3 style="color: #8b6f47;">Aradığınız kriterlere uygun kitap bulunamadı.</h3>
                            <p style="color: #6b5541;">Lütfen arama terimini değiştirin veya filtreleri temizleyin.</p>
                        </div>
                    }
                </div>
                @if (totalPages > 1)
                {
                    // Filtreleri linklerde korumak için
                    var routeData = new Dictionary<string, string>
            {
            { "q", currentSearch },
            { "sortOrder", currentSort },
            { "pageCount", currentPageCount }
            };

                    // --- AKILLI SAYFALAMA MANTIĞI ---
                    // Aktif sayfanın etrafında kaç sayfa gösterilsin? (Örn: 2 öncesi, 2 sonrası)
                    int range = 2;
                    int startPage = Math.Max(1, currentPage - range);
                    int endPage = Math.Min(totalPages, currentPage + range);

                    // Eğer başlangıçtayken (örn: sayfa 1) ileriye doğru yeterince buton görünmezse diye düzeltme
                    if (currentPage <= range)
                    {
                        endPage = Math.Min(totalPages, 5); // İlk 5 sayfayı göster
                    }
                    // Eğer sondaysa geriye doğru butonlar eksik kalmasın
                    if (currentPage >= totalPages - range)
                    {
                        startPage = Math.Max(1, totalPages - 4); // Son 5 sayfayı göster
                    }

                    <style>
                        /* Modern ve Kibar Pagination Tasarımı */
                        .custom-pagination .page-link {
                            color: #8b6f47;
                            border: 1px solid #e8dcc8;
                            background-color: #fff;
                            margin: 0 3px;
                            border-radius: 8px; /* Köşeleri yuvarla */
                            font-weight: 600;
                            transition: all 0.3s ease;
                            min-width: 40px; /* Kareye yakın dursun */
                            text-align: center;
                        }

                            .custom-pagination .page-link:hover {
                                background-color: #f5f0e8;
                                color: #6b5541;
                                border-color: #d4c5b0;
                                transform: translateY(-2px);
                                box-shadow: 0 2px 5px rgba(139, 111, 71, 0.2);
                            }

                        .custom-pagination .page-item.active .page-link {
                            background-color: #8b6f47;
                            border-color: #8b6f47;
                            color: #fff;
                            box-shadow: 0 4px 8px rgba(139, 111, 71, 0.4);
                        }

                        .custom-pagination .page-item.disabled .page-link {
                            color: #ccc;
                            background-color: #f9f9f9;
                            border-color: #eee;
                            pointer-events: none;
                        }

                        /* Mobilde butonları biraz küçült */
                        @@media (max-width: 768px) {
                            .custom-pagination .page-link {
                                padding: 5px 10px;
                                font-size: 0.85rem;
                                min-width: 30px;
                                margin: 0 1px;
                            }
                        }
                    </style>

                    <nav aria-label="Page navigation" class="mt-5 mb-4">
                        <ul class="pagination justify-content-center custom-pagination flex-wrap">

                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-all-route-data="routeData"
                                   asp-route-page="@(currentPage - 1)">
                                    <i class="fa-solid fa-chevron-left"></i>
                                </a>
                            </li>

                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-all-route-data="routeData" asp-route-page="1">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled"><span class="page-link border-0 bg-transparent">...</span></li>
                                }
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-all-route-data="routeData"
                                       asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (endPage < totalPages)
                            {
                                @if (endPage < totalPages - 1)
                                {
                                    <li class="page-item disabled"><span class="page-link border-0 bg-transparent">...</span></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-all-route-data="routeData" asp-route-page="@totalPages">@totalPages</a>
                                </li>
                            }

                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-all-route-data="routeData"
                                   asp-route-page="@(currentPage + 1)">
                                    <i class="fa-solid fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </main>
        </div>
    </form>
}

@section Scripts {
    <script>
        function toggleMobileFilters() {
            const sidebar = document.getElementById('filterSidebar');
            const toggle = document.querySelector('.mobile-filter-toggle');
            sidebar.classList.toggle('show');
            toggle.classList.toggle('active');
        }
    </script>
}