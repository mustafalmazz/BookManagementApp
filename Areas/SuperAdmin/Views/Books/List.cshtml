@model List<Book>

@{
    ViewData["Title"] = "Kitap Listesi";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-container {
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
        animation: slideIn 0.6s ease-out;
    }

    .header-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        border-bottom: 1px solid #333;
        padding-bottom: 20px;
    }

    .page-title {
        color: #ffd700;
        font-weight: 700;
        font-size: 2rem;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
        margin: 0;
    }

    .page-subtitle {
        color: #888;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .btn-gold {
        background-color: #ffd700;
        color: #000;
        font-weight: 700;
        border: none;
        padding: 10px 25px;
        border-radius: 6px;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
    }

    .btn-sm {
        padding: 8px 15px !important;
        font-size: 0.9rem;
    }

    .btn-gold:hover {
        background-color: #ffed4a;
        box-shadow: 0 0 20px rgba(255, 215, 0, 0.6);
        transform: translateY(-2px);
        color: #000;
    }

    .search-card {
        background-color: #111;
        border: 1px solid #333;
        border-left: 4px solid #ffd700;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .input-dark {
        background-color: #050505;
        border: 1px solid #333;
        color: #fff;
        padding: 10px 15px;
        border-radius: 5px;
        width: 100%;
        transition: border-color 0.3s;
    }

        .input-dark:focus {
            border-color: #ffd700;
            outline: none;
            box-shadow: 0 0 8px rgba(255, 215, 0, 0.2);
        }

    .table-card {
        background: #111;
        border: 1px solid #333;
        border-radius: 12px;
        padding: 5px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: #ccc;
    }

        .custom-table thead {
            background-color: #1a1a1a;
        }

        .custom-table th {
            text-align: left;
            padding: 15px;
            color: #ffd700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid #333;
        }

        .custom-table td {
            padding: 15px;
            border-bottom: 1px solid #222;
            vertical-align: middle;
        }

        .custom-table tr:hover td {
            background-color: rgba(255, 215, 0, 0.03);
            color: #fff;
        }

    .book-thumb {
        width: 60px;
        height: 80px;
        object-fit: cover;
        border-radius: 4px;
        border: 1px solid #444;
        transition: transform 0.3s;
    }

        .book-thumb:hover {
            transform: scale(1.5);
            border-color: #ffd700;
            z-index: 10;
            position: relative;
        }

    .no-image {
        width: 50px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #222;
        border-radius: 4px;
        color: #555;
        font-size: 1.5rem;
        border: 1px solid #333;
    }

    .category-tag {
        background: #333;
        color: lightgray;
        padding: 3px 8px;
        border-radius: 10px;
        font-size: 1.0rem;
        border: 2px solid #ffd700;
        white-space: nowrap; /* Mobilde kategori taşmasın */
    }

    .action-btn {
        width: 35px;
        height: 35px;
        border-radius: 5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: 1px solid transparent;
        color: #fff;
        margin-right: 5px;
        text-decoration: none;
    }

    .btn-edit {
        background: rgba(0, 123, 255, 0.2);
        color: #4dabf7;
        border-color: #004085;
    }

        .btn-edit:hover {
            background: #007bff;
            color: white;
            box-shadow: 0 0 10px #007bff;
        }

    .btn-delete {
        background: rgba(220, 53, 69, 0.2);
        color: #ff6b6b;
        border-color: #721c24;
    }

        .btn-delete:hover {
            background: #dc3545;
            color: white;
            box-shadow: 0 0 10px #dc3545;
        }

    /* --- MOBİL UYUMLULUK AYARLARI --- */
    @@media (max-width: 768px) {
        .page-container {
            padding: 10px; /* Mobilde kenar boşluğunu azalt */
        }

        .header-wrapper {
            flex-direction: column; /* Başlık ve butonu alt alta al */
            align-items: flex-start;
            gap: 15px;
        }

            .header-wrapper > div:last-child {
                width: 100%; /* Buton kapsayıcısını genişlet */
            }

        .btn-gold {
            width: 100%; /* Butonu mobilde tam genişlik yap */
            text-align: center;
        }

        .page-title {
            font-size: 1.5rem; /* Başlığı mobilde biraz küçült */
        }

        .search-card {
            padding: 15px;
        }
        /* Tabloyu mobilde kaydırılabilir yap ama stilleri bozma */
        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .custom-table {
            min-width: 600px; /* Tablonun mobilde çok sıkışmasını engelle */
        }
    }
</style>

<div class="page-container">

    <div class="header-wrapper">
        <div>
            <h1 class="page-title"><i class="bi bi-book-half"></i> Kitap Yönetimi</h1>
            <p class="page-subtitle">Kütüphanedeki @(Model?.Count ?? 0) adet kitabı yönetin</p>
        </div>
        <div>
            <a href="#" class="btn btn-gold">
                <i class="bi bi-plus-lg"></i> Yeni Kitap Ekle
            </a>
        </div>
    </div>

    <div class="search-card">
        <div style="flex-grow: 1;">
            <form method="get" asp-action="Search" asp-controller="Books" style="display: flex; gap: 10px;">
                <input type="text" name="q" class="input-dark" placeholder="Kitap adı, Yazar veya Kategori ara..." value="@Context.Request.Query["q"]">
                <button type="submit" class="btn-gold btn-sm">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table class="custom-table" id="booksTable">
                <thead>
                    <tr>
                        <th style="width: 50px;">#ID</th>
                        <th style="width: 80px;">GÖRSEL</th>
                        <th>BAŞLIK / YAZAR</th>
                        <th>KATEGORİ</th>
                        <th style="text-align:right;">İŞLEMLER</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td style="color:#666;">#@book.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(book.Image))
                                    {
                                        <img src="@book.Image" alt="@book.Name" class="book-thumb" />
                                    }
                                    else
                                    {
                                        <div class="no-image" title="Görsel Yok">
                                            <i class="bi bi-journal-text"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div style="font-weight:bold; color:#fff; font-size:1rem;">@book.Name</div>
                                    <div style="color:#888; font-size:0.85rem;">
                                        <i class="bi bi-pen"></i> @(book.Author ?? "Bilinmiyor")
                                    </div>
                                </td>
                                <td>
                                    <span class="category-tag">
                                        @(book.Category?.CategoryName ?? "Genel")
                                    </span>
                                </td>

                                <td style="text-align:right;">
                                    <a asp-action="Edit" asp-route-id="@book.Id" class="action-btn btn-edit" title="Düzenle">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="DeleteConfirm" asp-route-id="@book.Id" class="action-btn btn-delete" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center p-4 text-muted">
                                <i class="bi bi-journal-x" style="font-size: 2rem; display:block; margin-bottom:10px;"></i>
                                Aradığınız kriterlere uygun kitap bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.getElementById('searchBookInput')?.addEventListener('keyup', function() {
        var value = this.value.toLowerCase();
        var rows = document.querySelectorAll('#booksTable tbody tr');

        rows.forEach(function(row) {
            var text = row.textContent.toLowerCase();
            row.style.display = text.indexOf(value) > -1 ? '' : 'none';
        });
    });
</script>