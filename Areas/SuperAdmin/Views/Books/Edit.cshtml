@model Book

@{
    ViewData["Title"] = "Kitap Düzenle";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-container {
        display: flex;
        justify-content: center;
        padding-top: 30px;
        padding-bottom: 50px;
        min-height: 80vh;
        animation: fadeInUp 0.6s ease-out;
    }

    .form-card {
        background-color: #111;
        width: 100%;
        max-width: 950px;
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.6);
        border: 1px solid #333;
        border-top: 4px solid #ffd700;
    }

    .form-title {
        color: #ffd700;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 10px;
        text-align: center;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.2);
    }

    .form-subtitle {
        color: #888;
        text-align: center;
        font-size: 0.9rem;
        margin-bottom: 40px;
        border-bottom: 1px solid #222;
        padding-bottom: 20px;
    }

    .form-label {
        color: #bbb;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        font-size: 0.9rem;
    }

    .input-gold {
        background-color: #080808;
        border: 1px solid #333;
        color: #fff;
        width: 100%;
        padding: 12px 15px;
        border-radius: 6px;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .input-gold:focus {
            border-color: #ffd700;
            outline: none;
            box-shadow: 0 0 10px rgba(255, 215, 0, 0.15);
            background-color: #0a0a0a;
        }

    textarea.input-gold {
        min-height: 100px;
        resize: vertical;
    }

    select.input-gold {
        appearance: none;
        background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%23ffd700%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-5%200-9.3%201.8-12.9%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2012.9l128%20127.9c3.6%203.6%207.8%205.4%2012.8%205.4s9.2-1.8%2012.8-5.4L287%2095c3.5-3.5%205.4-7.8%205.4-12.8%200-5-1.9-9.2-5.5-12.8z%22%2F%3E%3C%2Fsvg%3E");
        background-repeat: no-repeat;
        background-position: right 15px top 50%;
        background-size: 12px auto;
        cursor: pointer;
    }

    .img-preview-container {
        width: 100%;
        height: 350px;
        background-color: #080808;
        border: 1px dashed #444;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin-bottom: 15px;
    }

        .img-preview-container img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

    .no-img-text {
        color: #555;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .btn-save {
        background-color: #ffd700;
        color: #000;
        font-weight: 700;
        border: none;
        padding: 12px;
        width: 100%;
        border-radius: 6px;
        margin-top: 20px;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-save:hover {
            background-color: #ffed4a;
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
            transform: translateY(-2px);
        }

    .btn-cancel {
        display: block;
        text-align: center;
        color: #666;
        margin-top: 20px;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s;
    }

        .btn-cancel:hover {
            color: #ccc;
        }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.8rem;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="form-container">
    <div class="form-card">

        <h2 class="form-title">Kitap Düzenle</h2>
        <p class="form-subtitle">#@Model.Id nolu kitabın detaylarını düzenliyorsunuz.</p>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-7">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Kitap Adı</label>
                            <input asp-for="Name" class="input-gold" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Author" class="form-label">Yazar Adı</label>
                            <input asp-for="Author" class="input-gold" placeholder="Yazar adını giriniz" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Kategori</label>
                        <select class="input-gold" asp-for="CategoryId" asp-items="ViewBag.CategoryList">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Rate" class="form-label">Puan / Değerlendirme (1-10)</label>
                        <input asp-for="Rate" type="number" step="0.1" max="10" min="0" class="input-gold" />
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">Görsel URL</label>
                        <input asp-for="Image" id="imgUrlInput" class="input-gold" placeholder="https://..." />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Özel Notlar</label>
                        <textarea asp-for="Notes" class="input-gold" style="height: 80px;" placeholder="Admin notları..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-5">

                    <label class="form-label text-center">Kapak Görseli</label>
                    <div class="img-preview-container">
                        <img id="bookPreview" src="@Model.Image" style="@(string.IsNullOrEmpty(Model.Image) ? "display:none" : "")" />
                        <div id="noImgText" class="no-img-text" style="@(!string.IsNullOrEmpty(Model.Image) ? "display:none" : "")">
                            <i class="bi bi-image" style="font-size: 2rem;"></i>
                            <span>Görsel Yok</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Kitap Açıklaması</label>
                        <textarea asp-for="Description" class="input-gold" style="height: 150px;" placeholder="Kitap hakkında detaylı bilgi..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <button type="submit" class="btn-save">
                <i class="bi bi-check-circle-fill"></i> Kaydet ve Güncelle
            </button>

            <a asp-action="List" class="btn-cancel">İptal Et</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('imgUrlInput').addEventListener('input', function() {
            var url = this.value;
            var img = document.getElementById('bookPreview');
            var noImg = document.getElementById('noImgText');

            if (url) {
                img.src = url;
                img.style.display = 'block';
                noImg.style.display = 'none';
            } else {
                img.style.display = 'none';
                noImg.style.display = 'flex';
            }
        });

        document.getElementById('bookPreview').addEventListener('error', function() {
            this.style.display = 'none';
            document.getElementById('noImgText').style.display = 'flex';
        });
    </script>
}