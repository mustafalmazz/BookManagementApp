@model Category

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>
    /* Verdiğin Tema CSS'leri */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-container {
        display: flex;
        justify-content: center;
        padding-top: 50px; /* Biraz daha aşağıdan başlasın */
        padding-bottom: 50px;
        min-height: 80vh;
        animation: fadeInUp 0.6s ease-out;
    }

    .form-card {
        background-color: #111;
        width: 100%;
        max-width: 600px; /* Kategori az alanlı olduğu için genişliği daralttım */
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.6);
        border: 1px solid #333;
        border-top: 4px solid #ffd700;
    }

    .form-title {
        color: #ffd700;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 10px;
        text-align: center;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.2);
    }

    .form-subtitle {
        color: #888;
        text-align: center;
        font-size: 0.9rem;
        margin-bottom: 40px;
        border-bottom: 1px solid #222;
        padding-bottom: 20px;
    }

    .form-label {
        color: #bbb;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        font-size: 0.9rem;
    }

    .input-gold {
        background-color: #080808;
        border: 1px solid #333;
        color: #fff;
        width: 100%;
        padding: 12px 15px;
        border-radius: 6px;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .input-gold:focus {
            border-color: #ffd700;
            outline: none;
            box-shadow: 0 0 10px rgba(255, 215, 0, 0.15);
            background-color: #0a0a0a;
        }

    .btn-save {
        background-color: #ffd700;
        color: #000;
        font-weight: 700;
        border: none;
        padding: 12px;
        width: 100%;
        border-radius: 6px;
        margin-top: 30px;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
    }

        .btn-save:hover {
            background-color: #ffed4a;
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
            transform: translateY(-2px);
        }

    .btn-cancel {
        display: block;
        text-align: center;
        color: #666;
        margin-top: 20px;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s;
    }

        .btn-cancel:hover {
            color: #ccc;
        }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.8rem;
        margin-top: 5px;
        display: block;
    }

    /* İkon süslemesi için */
    .icon-header {
        text-align: center;
        margin-bottom: 15px;
        color: #ffd700;
        font-size: 2.5rem;
    }
</style>

<div class="form-container">
    <div class="form-card">

        <div class="icon-header">
            <i class="bi bi-bookmark-star"></i>
        </div>

        <h2 class="form-title">Kategori Düzenle</h2>
        <p class="form-subtitle">#@Model.Id nolu kategoriyi güncelliyorsunuz.</p>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
                <input asp-for="CategoryName" class="input-gold" placeholder="Örn: Bilim Kurgu" autocomplete="off" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-save">
                <i class="bi bi-check-circle-fill"></i> Değişiklikleri Kaydet
            </button>

            <a asp-action="List" class="btn-cancel">İptal Et ve Listeye Dön</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}