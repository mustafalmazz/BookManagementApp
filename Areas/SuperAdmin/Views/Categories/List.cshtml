@model IEnumerable<Category>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>
    /* --- GOLD TEMA CSS --- */

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
        animation: slideIn 0.6s ease-out;
    }

    /* Başlık */
    .header-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        border-bottom: 1px solid #333;
        padding-bottom: 20px;
    }

    .page-title {
        color: #ffd700;
        font-weight: 700;
        font-size: 2rem;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
        margin: 0;
    }

    .page-subtitle {
        color: #888;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Butonlar */
    .btn-gold {
        background-color: #ffd700;
        color: #000;
        font-weight: 700;
        border: none;
        padding: 10px 25px;
        border-radius: 6px;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
    }

    .btn-sm {
        padding: 8px 15px !important;
        font-size: 0.9rem;
    }

    .btn-gold:hover {
        background-color: #ffed4a;
        box-shadow: 0 0 20px rgba(255, 215, 0, 0.6);
        transform: translateY(-2px);
        color: #000;
    }

    /* Arama Kartı */
    .search-card {
        background-color: #111;
        border: 1px solid #333;
        border-left: 4px solid #ffd700;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
    }

    .input-dark {
        background-color: #050505;
        border: 1px solid #333;
        color: #fff;
        padding: 10px 15px;
        border-radius: 5px;
        width: 100%;
        transition: border-color 0.3s;
    }

        .input-dark:focus {
            border-color: #ffd700;
            outline: none;
            box-shadow: 0 0 8px rgba(255, 215, 0, 0.2);
        }

    /* Tablo */
    .table-card {
        background: #111;
        border: 1px solid #333;
        border-radius: 12px;
        padding: 5px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: #ccc;
    }

        .custom-table thead {
            background-color: #1a1a1a;
        }

        .custom-table th {
            text-align: left;
            padding: 15px;
            color: #ffd700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid #333;
        }

        .custom-table td {
            padding: 15px;
            border-bottom: 1px solid #222;
            vertical-align: middle;
        }

        .custom-table tr:hover td {
            background-color: rgba(255, 215, 0, 0.03);
            color: #fff;
        }

    /* Kategori Adı Stili */
    .category-name-style {
        font-weight: 600;
        font-size: 1.1rem;
        color: #fff;
        display: inline-block;
        border-left: 3px solid #ffd700;
        padding-left: 10px;
    }

    /* Kullanıcı Stili */
    .user-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #aaa;
        font-size: 0.95rem;
    }

        .user-badge i {
            color: #ffd700; /* İkon rengi gold */
        }

    /* Butonlar */
    .action-btn {
        width: 35px;
        height: 35px;
        border-radius: 5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: 1px solid transparent;
        color: #fff;
        margin-right: 5px;
        text-decoration: none;
    }

    .btn-edit {
        background: rgba(0, 123, 255, 0.2);
        color: #4dabf7;
        border-color: #004085;
    }

        .btn-edit:hover {
            background: #007bff;
            color: white;
            box-shadow: 0 0 10px #007bff;
        }

    .btn-delete {
        background: rgba(220, 53, 69, 0.2);
        color: #ff6b6b;
        border-color: #721c24;
    }

        .btn-delete:hover {
            background: #dc3545;
            color: white;
            box-shadow: 0 0 10px #dc3545;
        }
</style>

<div class="page-container">

    <div class="header-wrapper">
        <div>
            <h1 class="page-title"><i class="bi bi-tags-fill"></i> Kategori Yönetimi</h1>
            <p class="page-subtitle">Sistemde tanımlı @(Model?.Count() ?? 0) adet kategori bulunmaktadır.</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-gold">
                <i class="bi bi-plus-lg"></i> Yeni Kategori
            </a>
        </div>
    </div>

    <div class="search-card">
        <div style="flex-grow: 1;">
            <form method="get" asp-action="List" style="display: flex; gap: 10px;">
                <input type="text" id="categorySearchInput" name="q" class="input-dark" placeholder="Kategori veya Kullanıcı ara..." value="@Context.Request.Query["q"]">
                <button type="button" class="btn-gold btn-sm" style="pointer-events: none;">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table class="custom-table" id="categoriesTable">
                <thead>
                    <tr>
                        <th style="width: 80px;">#ID</th>
                        <th>OLUŞTURAN</th>
                        <th>KATEGORİ ADI</th>
                        <th style="text-align:right;">İŞLEMLER</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="color:#666;">#@item.Id</td>

                                <td>
                                    <div class="user-badge">
                                        <i class="bi bi-person-circle"></i>
                                        <span>@(item.User?.UserName ?? "Sistem")</span>
                                    </div>
                                </td>

                                <td>
                                    <span class="category-name-style">@item.CategoryName</span>
                                </td>

                                <td style="text-align:right;">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn-edit" title="Düzenle">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="DeleteConfirm" asp-route-id="@item.Id" class="action-btn btn-delete" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center p-4 text-muted">
                                <i class="bi bi-tags" style="font-size: 2rem; display:block; margin-bottom:10px;"></i>
                                Henüz hiç kategori eklenmemiş veya arama sonucu bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // JS Hızlı Arama (Kategori Adı ve Kullanıcı Adı üzerinden)
    document.getElementById('categorySearchInput').addEventListener('keyup', function() {
        var value = this.value.toLowerCase();
        var rows = document.querySelectorAll('#categoriesTable tbody tr');

        rows.forEach(function(row) {
            var text = row.textContent.toLowerCase();
            if(row.textContent.includes("Henüz hiç kategori")) return;

            row.style.display = text.indexOf(value) > -1 ? '' : 'none';
        });
    });
</script>