@model Category

@{
    ViewData["Title"] = "Kategori Silme Onayı";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>
    /* --- SİLME SAYFASI TASARIMI (Dark/Danger Tema) --- */

    @@keyframes zoomIn {
        from

    {
        opacity: 0;
        transform: scale(0.9);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }

    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 50px;
        min-height: 70vh;
        animation: zoomIn 0.4s ease-out;
    }

    .form-card {
        background-color: #111;
        width: 100%;
        max-width: 500px;
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.6);
        border: 1px solid #333;
        /* Silme işlemi olduğu için üst çizgiyi Kırmızı yapıyoruz */
        border-top: 4px solid #ff4444;
        text-align: center;
    }

    .warning-icon {
        font-size: 4rem;
        color: #ff4444;
        margin-bottom: 20px;
        text-shadow: 0 0 20px rgba(255, 68, 68, 0.2);
    }

    .form-title {
        color: #fff;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .form-subtitle {
        color: #888;
        font-size: 0.95rem;
        margin-bottom: 30px;
        line-height: 1.5;
    }

    .highlight-text {
        color: #ffd700; /* Kategori adını Gold yapalım */
        font-weight: bold;
        font-size: 1.1rem;
    }

    /* Buton Grubu */
    .btn-group-custom {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 20px;
    }

    .btn-delete-confirm {
        background-color: #ff4444;
        color: #fff;
        font-weight: 600;
        border: none;
        padding: 12px 30px;
        border-radius: 6px;
        transition: all 0.3s;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-delete-confirm:hover {
            background-color: #cc0000;
            box-shadow: 0 0 15px rgba(255, 68, 68, 0.4);
            transform: translateY(-2px);
        }

    .btn-cancel {
        background-color: transparent;
        border: 1px solid #444;
        color: #ccc;
        padding: 12px 30px;
        border-radius: 6px;
        text-decoration: none;
        transition: all 0.3s;
        font-weight: 500;
    }

        .btn-cancel:hover {
            border-color: #fff;
            color: #fff;
            background-color: #222;
        }
</style>

<div class="form-container">
    <div class="form-card">

        <div class="warning-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>

        <h1 class="form-title">Silme İşlemi</h1>

        <p class="form-subtitle">
            Aşağıdaki kategoriyi silmek üzeresiniz. Bu işlem geri alınamaz.<br />
            Silinecek Kategori: <span class="highlight-text">"@Model.CategoryName"</span>
        </p>

        <form method="post" asp-action="Delete" asp-controller="Categories">
            <input type="hidden" asp-for="Id" />

            <div class="btn-group-custom">
                <a asp-action="List" class="btn-cancel">Vazgeç</a>

                <button type="submit" class="btn-delete-confirm">
                    <i class="bi bi-trash-fill"></i> Evet, Sil
                </button>
            </div>
        </form>

    </div>
</div>