@model Book
@{
    ViewData["Title"] = "Delete Book";
}

<style>
    /* Genel Sayfa Yapısı */
    body {
        background-color: #0a0c1e;
        color: #e0e0e0;
    }

    /* --- Kart Yapısı (Sadeleştirildi) --- */
    .delete-card {
        background: #10152f;
        /* Çerçeve opaklığı düşürüldü, daha soft bir sınır */
        border: 1px solid rgba(255, 0, 106, 0.3);
        border-radius: 12px;
        /* Gölge siyah ağırlıklı yapıldı, neon parlaması azaltıldı */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        padding: 40px;
        max-width: 900px;
        margin: 40px auto;
    }

    /* Başlık (Glow efekti kaldırıldı) */
    .warning-title {
        color: #ffffff;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.8rem;
        /* Neon text-shadow kaldırıldı, temiz beyaz yazı */
    }

    .warning-icon {
        font-size: 3rem;
        color: #ff006a; /* Renk korundu */
        display: block;
        text-align: center;
        margin-bottom: 20px;
        opacity: 0.8; /* Biraz daha mat */
        /* Animasyon kaldırıldı: Göz yormaması için */
    }

    /* Açıklama Metni */
    .warning-text {
        color: #8899b0; /* Gri-mavi tonu, okuması kolay */
        text-align: center;
        margin-bottom: 30px;
        font-size: 1rem;
    }

    .highlight-name {
        color: #e0e0e0;
        font-weight: 700;
    }

    /* Ayırıcı */
    hr {
        border-color: #3f4c6b; /* Kırmızı yerine koyu mavi/gri */
        opacity: 0.5;
        margin: 20px 0 30px 0;
    }

    /* --- Kitap Görseli --- */
    .book-image-container {
        text-align: center;
        background: #0d1126; /* Karttan bir tık koyu */
        padding: 15px;
        border-radius: 8px;
        border: 1px solid #1f2a52;
    }

    .book-image {
        max-width: 100%;
        height: auto;
        max-height: 300px;
        border-radius: 4px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
    }

    /* --- Kitap Bilgileri --- */
    .book-info h3 {
        color: #ffffff;
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .book-info p {
        color: #a0b0d0;
        font-size: 1rem;
        margin-bottom: 8px;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        padding-bottom: 8px;
    }

    .book-info strong {
        color: #7080a0;
        margin-right: 10px;
    }

    /* --- Butonlar (Soft/Outline Tarzı) --- */

    /* Silme Butonu: Varsayılan hali şeffaf, hover olunca doluyor */
    .btn-danger {
        background-color: transparent;
        border: 1px solid #ff006a;
        color: #ff006a;
        width: 100%;
        padding: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #ff006a;
            color: #ffffff;
            box-shadow: 0 0 15px rgba(255, 0, 106, 0.3);
        }

    /* İptal Butonu */
    .btn-secondary {
        background-color: transparent;
        border: 1px solid #4a5568;
        color: #a0b0d0;
        width: 100%;
        padding: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            border-color: #a0b0d0;
            color: #ffffff;
            background-color: rgba(255,255,255,0.05);
        }

    /* --- MOBİL GÖRÜNÜM OPTİMİZASYONU --- */
    @@media (max-width: 768px) {
        .delete-card

    {
        padding: 18px 14px;
        margin: 12px;
        border-radius: 8px;
    }

    .warning-icon {
        font-size: 1.8rem;
        margin-bottom: 8px;
    }

    .warning-title {
        font-size: 1.2rem;
        margin-bottom: 8px;
        line-height: 1.3;
    }

    .warning-text {
        font-size: 0.82rem;
        margin-bottom: 12px;
        line-height: 1.4;
    }

    hr {
        margin: 10px 0 12px 0;
    }

    /* Kitap görseli daha büyük ve ortalı */
    .book-image-container {
        padding: 12px;
        margin-bottom: 12px;
    }

    .book-image {
        max-height: 200px;
    }

    /* Kitap bilgileri ortalanmış ve daha okunaklı */
    .book-info {
        text-align: center;
        margin-bottom: 0 !important;
    }

        .book-info h3 {
            font-size: 1.15rem;
            margin-bottom: 10px;
            line-height: 1.3;
        }

        .book-info p {
            font-size: 0.92rem;
            margin-bottom: 5px;
            padding-bottom: 5px;
            display: inline-block;
            width: 100%;
        }

        .book-info strong {
            font-size: 0.92rem;
        }

    /* Tüm br'leri gizle */
    br {
        display: none;
    }

    /* Butonlar */
    .btn-danger,
    .btn-secondary {
        padding: 11px;
        font-size: 0.92rem;
    }

    /* Buton container boşluğunu azalt */
    .row.g-3 {
        margin-top: 12px !important;
        row-gap: 8px !important;
    }

    .row.align-items-start {
        row-gap: 0 !important;
    }

    .col-md-4.mb-4 {
        margin-bottom: 12px !important;
    }

    .col-md-8 {
        padding-top: 0 !important;
    }

    /* Görsel yok placeholder */
    .book-image-container .p-4 {
        padding: 1.2rem !important;
        font-size: 0.88rem;
    }

    .book-image-container .fa-2x {
        font-size: 1.8rem !important;
    }

    }

    /* Çok küçük ekranlar için (mobil yatay/küçük telefonlar) */
    @@media (max-width: 576px) {
        .delete-card

    {
        padding: 16px 12px;
        margin: 10px;
    }

    .warning-icon {
        font-size: 1.6rem;
        margin-bottom: 6px;
    }

    .warning-title {
        font-size: 1.1rem;
        margin-bottom: 6px;
    }

    .warning-text {
        font-size: 0.78rem;
        margin-bottom: 10px;
    }

    .book-image {
        max-height: 180px;
    }

    .book-info h3 {
        font-size: 1.05rem;
        margin-bottom: 8px;
    }

    .book-info p {
        font-size: 0.88rem;
        margin-bottom: 4px;
        padding-bottom: 4px;
    }

    .btn-danger,
    .btn-secondary {
        padding: 10px;
        font-size: 0.88rem;
    }

    .row.g-3 {
        margin-top: 10px !important;
    }

    }
</style>

<div class="delete-card">
    <i class="fas fa-trash-alt warning-icon"></i>

    <h1 class="warning-title">Kitap Silme Onayı</h1>

    <p class="warning-text">
        Bu işlem geri alınamaz. <span class="highlight-name">"@Model.Name"</span> adlı kitabı sistemden kalıcı olarak silmek istediğinize emin misiniz?
    </p>

    <hr />

    <div class="row align-items-start">
        <div class="col-md-4 mb-4 mb-md-0">
            <div class="book-image-container">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" class="book-image" alt="@Model.Name" />
                }
                else
                {
                    <div class="p-4 text-muted"><i class="fas fa-image fa-2x mb-2"></i><br>Görsel Yok</div>
                }
            </div>
        </div>

        <div class="col-md-8">
            <div class="book-info mb-4">
                <h3>@Model.Name</h3>
                <p><strong>Yazar:</strong> @Model.Author</p>
                <p><strong>Kategori:</strong> @Model.Category?.CategoryName</p>
            </div>
            <br />
            <br />
            <br />
            <br />
            <div class="row g-3 mt-4">
                <div class="col-md-6">
                    <a asp-controller="Books" asp-action="List" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal & Geri Dön
                    </a>
                </div>
                <div class="col-md-6">
                    <form method="post" asp-action="DeleteConfirm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-check"></i> Evet, Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>