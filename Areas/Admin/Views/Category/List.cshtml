@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category List";
}

<style>
    /* Sayfa _Layout.cshtml kullanmıyorsa veya
               body stilini oradan almıyorsa bu gereklidir.
            */
    body {
        background-color: #0a0c1e;
        color: #e0e0e0;
    }

    /* Başlık: Neon Mavi Parıltı */
    h1 {
        color: #ffffff;
        text-shadow: 0 0 5px #00d9ff, 0 0 10px #00d9ff;
    }

    /* Ayırıcı Çizgi */
    hr {
        border-color: #1f2a52;
        opacity: 0.5;
    }

    /* --- Buton Stilleri --- */

    /* "Add New" Butonu (Neon Yeşil) */
    .btn-outline-success {
        color: #00ff6a;
        border-color: #00ff6a;
        background-color: transparent;
        transition: all 0.3s ease;
    }

        .btn-outline-success:hover {
            background-color: #00ff6a;
            color: #0a0c1e; /* Neon arka plan üzerinde koyu metin */
            box-shadow: 0 0 15px #00ff6a;
        }

    /* "Delete" Butonu (Neon Kırmızı/Pembe) */
    .btn-danger {
        background-color: #ff006a;
        border-color: #ff006a;
        color: #ffffff;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #e0005c;
            border-color: #e0005c;
            box-shadow: 0 0 12px #ff006a;
        }

    /* "Edit" Butonu (Neon Mavi) - Book List'teki btn-primary ile aynı */
    .btn-success, .btn-primary {
        background-color: #00c3ff;
        border-color: #00c3ff;
        color: #0a0c1e; /* Kontrast için koyu metin */
        transition: all 0.3s ease;
    }

        .btn-success:hover, .btn-primary:hover {
            background-color: #00a9db;
            border-color: #00a9db;
            box-shadow: 0 0 12px #00c3ff;
        }

    /* "Kitap Eklenmemiş" Uyarısı (Neon Kırmızı/Pembe) */
    .text-danger {
        color: #ff006a !important;
        font-weight: 500;
        text-shadow: 0 0 5px rgba(255, 0, 106, 0.5);
    }


    /* --- Tablo Stilleri --- */

    .table {
        color: #e0e0e0;
        background-color: #10152f;
        /* Neon çerçeve ve parıltı */
        border: 1px solid #00aaff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 170, 255, 0.3);
        border-collapse: separate;
        border-spacing: 0;
        overflow: hidden;
        margin-bottom: 0; /* Responsive div içinde boşluk yapmasın */
    }

        /* Tablo Başlığı */
        .table thead th {
            color: #a0b0d0;
            border-bottom: 2px solid #1f2a52;
            background-color: #131a38;
            border-top: none;
            vertical-align: middle;
            white-space: nowrap; /* Başlıkların mobilde kırılmasını önler */
        }

        /* Tablo Hücreleri */
        .table td, .table th {
            border-color: #1f2a52;
            vertical-align: middle;
        }

    /* Çizgili (Striped) Renkler */
    .table-striped > tbody > tr:nth-of-type(odd) > * {
        background-color: #10152f;
        color: #e0e0e0;
    }

    .table-striped > tbody > tr:nth-of-type(even) > * {
        background-color: #131a38;
        color: #e0e0e0;
    }

    /* Hover (Dinamiklik) */
    .table-hover > tbody > tr:hover > * {
        background-color: #1a2452;
        color: #ffffff;
    }

    .search-form {
        margin-bottom: 20px;
        padding: 20px;
        background: #10152f;
        border: 1px solid #1f2a52;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 170, 255, 0.2);
    }

        /* Input Alanı */
        .search-form .form-control {
            background-color: #131a38;
            color: #e0e0e0;
            border: 1px solid #1f2a52;
        }

            /* Input Odaklanma (Focus) Efekti */
            .search-form .form-control:focus {
                border-color: #00d9ff; /* Neon mavi sınır */
                box-shadow: 0 0 8px rgba(0, 217, 255, 0.5); /* Neon parıltı */
            }

    /* Arama Butonu (Neon Mavi) */
    .btn-search {
        background-color: #00c3ff;
        border-color: #00c3ff;
        color: #0a0c1e;
        transition: all 0.3s ease;
    }

        .btn-search:hover {
            background-color: #00a9db;
            border-color: #00a9db;
            box-shadow: 0 0 10px #00c3ff;
            color: #0a0c1e;
        }

    /* --- MOBİL UYUMLULUK (RESPONSIVE CSS) --- */
    @@media (max-width: 768px) {
        /* Üst kısımdaki Add New ve Search kısmını alt alta al */
        .top-action-bar

    {
        flex-direction: column !important;
        align-items: stretch !important;
        gap: 15px;
    }

    /* Butonu tam genişlik yap */
    .btn-outline-success {
        width: 100%;
    }

    /* Arama formunu tam genişlik yap */
    .search-form {
        width: 100%;
        margin-bottom: 0; /* Container margin'i yeterli */
    }

        /* Arama kutusundaki 300px sabit genişliği eziyoruz */
        .search-form input[name="q"] {
            width: 100% !important;
        }

    }
</style>


<h1 class="text-center mb-3">Tüm Kategorilerim</h1>
<hr />

<div class="d-flex justify-content-between align-items-center mb-4 top-action-bar">

    <a asp-area="Admin" asp-action="Create" class="btn btn-outline-success">Add New</a>

    <form asp-action="Search" method="get" class="d-flex search-form p-0 m-0">
        <input type="text"
               name="q"
               class="form-control me-2"
               placeholder="Kitap veya Yazar Adı..."
               style="width: 300px;" /> <button type="submit" class="btn btn-search">
            <i class="fas fa-search"></i> Ara
        </button>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Kategori</th>
                <th>Books</th>
                <th style="width:200px;">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>
                        @if (item.Books != null && item.Books.Any())
                        {
                            var booksToShow = item.Books.Take(3).ToList();
                            for (int i = 0; i < booksToShow.Count; i++)
                            {
                                @booksToShow[i].Name

                                @if (i < booksToShow.Count - 1)
                                {
                                    <text>, </text>
                                }
                            }

                            @if (item.Books.Count() > 3)
                            {
                                <text>...</text>
                            }
                        }
                        else
                        {
                            <span class="text-danger">Bu Kategoriye Henüz Kitap Eklenmemiş!</span>
                        }
                    </td>

                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn btn-danger btn-sm" asp-area="admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-success btn-sm" asp-area="admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>