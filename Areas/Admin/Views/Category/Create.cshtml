@model Category

@{
    ViewData["Title"] = "Category Add";
}

<style>
    /* Sayfa _Layout.cshtml kullanmıyorsa veya
          body stilini oradan almıyorsa bu gereklidir.
        */
    body {
        background-color: #0a0c1e;
        color: #e0e0e0;
    }

    /* Başlık: Neon Mavi Parıltı */
    h1 {
        color: #ffffff;
        text-shadow: 0 0 5px #00d9ff, 0 0 10px #00d9ff;
    }

    /* Ayırıcı Çizgi */
    hr {
        border-color: #1f2a52;
        opacity: 0.5;
    }

    /* --- Form Stilleri --- */

    /* Formun kendisini bir kart gibi göster */
    form {
        background: #10152f;
        border: 1px solid #00aaff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 170, 255, 0.3);
        padding: 30px;
        /* col-8 ile birlikte merkezlemek için mx-auto eklendi */
    }

    /* Form Etiketleri */
    .form-label {
        color: #a0b0d0;
        font-weight: 500;
    }

    /* Input Kutuları */
    .form-control {
        background-color: #131a38;
        color: #e0e0e0;
        border: 1px solid #1f2a52;
        border-radius: 6px;
    }

        /* Input Odaklanma (Focus) Efekti */
        .form-control:focus {
            background-color: #131a38;
            color: #e0e0e0;
            border-color: #00d9ff;
            box-shadow: 0 0 10px rgba(0, 217, 255, 0.5);
            outline: 0;
        }

    /* --- Buton Stilleri --- */

    /* "Add" Butonu (Neon Mavi) */
    .btn-primary {
        background-color: #00c3ff;
        border-color: #00c3ff;
        color: #0a0c1e; /* Kontrast için koyu metin */
        transition: all 0.3s ease;
        font-weight: 600;
        width: 100%; /* Diğer formlarla tutarlı */
        padding: 10px;
        font-size: 1.1rem;
    }

        .btn-primary:hover {
            background-color: #00a9db;
            border-color: #00a9db;
            box-shadow: 0 0 12px #00c3ff;
        }

</style>

<h1 class="text-center">Add Category</h1>
<hr />

<form action="Create" method="post" class="col-8 mx-auto">
    <div class="mb-2">
        <label class="form-label" asp-for="@Model.CategoryName">Category Name</label>
        <input class="form-control" asp-for="@Model.CategoryName" />
    </div>
    <button class="btn btn-primary mt-3">Add</button>
</form>