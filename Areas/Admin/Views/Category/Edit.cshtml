@model CategoryEditViewModel

@{
    ViewData["Title"] = "Category Edit";

}

<h1 class="text-center">Edit Category Page</h1>
<hr />
<div class="row">
    <div class="col-6">

        <form method="post" action="Edit">
            <input type="hidden" asp-for="Category.Id" />
            <div class="mb-2">
                <label asp-for="Category.CategoryName">Category Name</label>
                <input class="form-control" asp-for="Category.CategoryName" />
            </div>
            <button class="btn btn-primary">
                Save
            </button>
        </form>
    </div>

    <div class="col-6">
        <ul class="list-group">
            <li class="list-group-item active" aria-current="true">Books in category</li>
            @foreach (var item in Model.Books)
            {
                <li class="list-group-item"><b>@item.Name</b>  <i>(@item.Author)</i> </li>
            }
        </ul>
    </div>
</div>
