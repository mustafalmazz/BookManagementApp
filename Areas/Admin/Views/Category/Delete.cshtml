@model Category
@{
    ViewData["Title"] = "Delete Category";
}

<style>
    /* Genel Sayfa Yapısı */
    body {
        background-color: #0a0c1e;
        color: #e0e0e0;
    }

    /* --- Kart Yapısı --- */
    .delete-card {
        background: #10152f;
        /* Çerçeve yine kırmızı (Danger Zone) ama biraz daha ince */
        border: 1px solid rgba(255, 0, 106, 0.5);
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(255, 0, 106, 0.15);
        padding: 40px;
        max-width: 600px;
        margin: 80px auto;
        text-align: center;
    }

    /* Başlık (Genel Uyarı) */
    .warning-title {
        color: #ffffff;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 25px;
        letter-spacing: 1px;
    }

    .warning-icon {
        font-size: 3rem;
        color: #ff006a;
        display: block;
        margin-bottom: 15px;
        opacity: 0.9;
    }

    /* --- Sadeleştirilmiş Kategori İsmi Alanı --- */
    .category-display-box {
        background-color: #0a0c1e; /* Sayfa rengiyle aynı, gömülü hissi */
        border: 1px solid #1f2a52; /* Çok hafif mavi sınır */
        border-radius: 8px;
        padding: 15px;
        margin: 0 auto 25px auto;
        max-width: 80%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .category-label {
        color: #7080a0;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .category-name-text {
        color: #e0e0e0; /* Düz beyaz/gri, neon değil */
        font-size: 1.2rem;
        font-weight: 700;
    }

    /* Açıklama Metni */
    .warning-text {
        color: #8899b0;
        font-size: 0.95rem;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    /* --- Butonlar --- */
    .btn-danger {
        background-color: rgba(255, 0, 106, 0.1); /* Daha soft arka plan */
        border: 1px solid #ff006a;
        color: #ff006a;
        padding: 10px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
    }

        .btn-danger:hover {
            background-color: #ff006a;
            color: #ffffff;
            box-shadow: 0 0 15px rgba(255, 0, 106, 0.4);
        }

    .btn-secondary {
        background-color: transparent;
        border: 1px solid #4a5568;
        color: #a0b0d0;
        padding: 10px 30px;
        font-weight: 500;
        transition: all 0.3s ease;
        width: 100%;
    }

        .btn-secondary:hover {
            border-color: #a0b0d0;
            color: #ffffff;
        }
</style>

<div class="delete-card">
    <i class="fas fa-trash-alt warning-icon"></i>

    <div class="warning-title">Kategori Silme Onayı</div>

    <div class="category-display-box">
        <span class="category-label">Seçilen:</span>
        <span class="category-name-text">@Model.CategoryName</span>
    </div>

    <p class="warning-text">
        Bu kategoriyi silmek üzeresiniz. Bu işlem geri alınamaz ve kategoriye bağlı içerikler etkilenebilir.
    </p>

    <div class="row g-3 justify-content-center">
        <div class="col-6">
            <a asp-controller="Category" asp-action="List" class="btn btn-secondary">
                Vazgeç
            </a>
        </div>
        <div class="col-6">
            <form method="post" asp-action="DeleteConfirm">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    Sil
                </button>
            </form>
        </div>
    </div>
</div>